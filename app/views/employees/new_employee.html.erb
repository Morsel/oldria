<% title "Invite an Employee to SpoonFeed" %>

<% form_for @employment, :url => restaurant_employees_path(@restaurant) do |form| %>
	<%= form.hidden_field :restaurant_role_id %>
	<% form.fields_for :employee, @employee do |f| -%>
	<%= f.error_messages %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name, :class => 'text' %>
	</p>
	<p>
		<%= f.label :username %>
		<%= f.text_field :username, :class => 'text' %>
	</p>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email, :class => 'text' %>
	</p>
	<p>
		<%= f.label :password, "Temporary Password" %>
		<%= f.password_field :password, :class => 'text' %>
	</p>
	<p>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation, :class => 'text' %>
	</p>
	<% end -%>

	<p><%= button_tag "Invite Employee" %></p>
<% end %>
