<% restaurant ||= user %>
<div class="identity<% unless restaurant.logo && restaurant.logo.attachment? -%> no_avatar<% end -%>">
    <div class="avatar">
        <% if restaurant.logo && restaurant.logo.attachment? -%>
          <%= image_tag(restaurant.logo.attachment.url(:thumb), :width => 'auto', :height => 'auto') %>
        <% end -%>
    </div>
    <ul class="identity_details restaurant">
        <li class="employee_name primary">
            <b><%= link_to_if ((media_user_prefers_publish_profile? && restaurant.prefers_publish_profile?) || restaurant.linkable_profile? || logged_in_on_spoonfeed), restaurant.try(:name), correct_restaurant_path(restaurant) %> </b>
        </li>
        <li class="metro_area">
            <%= restaurant.city_and_state %>&nbsp;
        </li>
        <li class="metro_area">
            <% if current_user.nil? || (!current_user.nil? && !current_user.media? && !current_user.admin? && !current_user.role.blank? %>
                 <% if @subscriber.present? && @subscriber.has_subscription(restaurant) %>
                  <%= link_to 'Unsubscribe', unsubscribe_soapbox_restaurant_path(restaurant, :subscriber_id => @subscriber.id), :method => "post" ,:class=>"unsubscribe" %>
                <%- else -%>
                  <%= link_to 'Subscribe', subscribe_soapbox_restaurant_path(restaurant), :method => "post",:class=>"subscribe" %>
                <%- end -%>
            <% else %>
                <% if(current_user.media?) %>
                    <% if current_user.restaurant_newsletter_subscription(restaurant).blank? %>
                        <%= link_to 'Subscribe', media_subscribe_restaurant_path(restaurant),:class=>"subscribe" %>
                    <% else %>
                        <%= link_to 'Unsubscribe', media_subscribe_restaurant_path(restaurant),:class=>"unsubscribe" %>
                    <% end %>          
                <% end %>            
            <%- end -%>
        </li>

    </ul>
</div>
