<%= render :partial => 'email_header' %>

<h3 id="messagetype" style="color: #bbb; font-size: 11px; font-weight: normal; letter-spacing: 2px; line-height: 14px; margin: 0 0 13px; text-transform: uppercase;"><%= @request.media_request_type.try(:name) || "Media Request" %></h3>

<p id="messagemessage" style="font-size: 14px;">
  <%= @request.publication_string %> has a question for <%= @discussion.restaurant.name %>.
</p>

<p id="messagelink" style="clear: both; font-size: 16px;">
  <a href="<%= media_request_discussion_url @discussion %>" style="color: #cc6632; font-weight: bold; text-decoration: none;">Respond to this Media Request &raquo;</a></p>

<%= render :partial => 'email_footer' %>

