<% semantic_form_for @media_user, :url => media_users_path do |f| %>

<% f.inputs :name => 'Your Information' do %>
	<%= f.input :first_name, :input_html => {:class => 'span-3'}, :wrapper_html => {:class => 'span-3'} %>
	<%= f.input :last_name, :input_html => {:class => 'span-4'}, :wrapper_html => {:class => 'span-4'} %>
	<%= f.input :email, :wrapper_html => {:class => 'clear'} %>
	<%= f.input :publication, :label => "Affiliated Publication", :hint => "If you are <em>freelance</em>, please put your primary publication" %>
	<%= f.input :james_beard_region, :label => 'Region', :wrapper_html => {:class => 'bottom'} %>
	<%# f.collection_select :james_beard_region_id, JamesBeardRegion.all, :id, :name_and_description %>
<% end %>

<% f.inputs :name => 'Desired Login Information' do %>
	<%= f.input :username %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
<% end %>

<p>
	<%= button_tag "Submit", :class => 'positive' %>
</p>
<% end %>
