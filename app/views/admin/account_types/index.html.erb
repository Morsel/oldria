<% title "Account Types" %>

<p><%= link_to "New Account Type", new_admin_account_type_path, :class => 'button positive' %></p>
<br clear="all" />
<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  <% for account_type in @account_types %>
    <tr>
      <td><%=h account_type.name %></td>
      <td class="utility">
        <%= link_to "Edit", edit_admin_account_type_path(account_type) %>
        <%= link_to "Destroy", [:admin, account_type], :confirm => 'Are you sure?', :method => :delete if account_type.users.blank? %>
      </td>
    </tr>
  <% end %>
</table>


