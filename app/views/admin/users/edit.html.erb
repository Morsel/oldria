<h1>Editing user</h1>

<% form_for [:admin, @user] do |f| %>
  <%= f.error_messages %>

  <%- if @user.avatar? -%>
    <p><%= image_tag @user.avatar.url(:thumb), :class => 'thumbnail'  %></p>    
  <%- end -%>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username, :class => 'text' %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email, :class => 'text' %>
  </p>
  <p>
    <%= f.label :admin, "Admin?" %><br />
    <%= f.check_box :admin %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', admin_users_path %>