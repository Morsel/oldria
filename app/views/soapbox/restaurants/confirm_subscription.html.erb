<% title "Confirm Subscription Options" %>

<%= render 'layouts/flashes' %>

<%= semantic_form_for [:soapbox, @subscription] do |f| %>
    <%= f.inputs do %>
        <%= f.input :share_with_restaurant, :label => "Share my email address with #{@restaurant.name} to receive other news and promotions?" %>
    <% end %>
    
    <%= submit_tag "Confirm" %>
<% end %>