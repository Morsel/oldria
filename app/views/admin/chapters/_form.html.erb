<% chapter_url = chapter.new_record? ? admin_chapters_path(:responder_type => params[:responder_type]) :
    admin_chapter_path(:responder_type => params[:responder_type], :id => chapter.id) %>

<% semantic_form_for [:admin, chapter], :url => chapter_url do |f| %>
    <% f.inputs :class => "plain" do %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :topic_id, :as => :hidden, :input_html => { :value => topic.id } %>
        <%= button_tag "Save" %>
    <% end %>
<% end %>
