<% title "A la Minute" %>

<% for answer in @answers -%>
<% div_for answer do %>
    <h2><%= link_to answer.question, a_la_minute_answers_path(:question_id => answer.a_la_minute_question.id) %></h2>
      <div class="menu_item_main">
    <%= render :partial => 'restaurants/identity', :locals => { :restaurant => answer.responder } %>
     <% if(current_user.media? ) %>

        <% if current_user.restaurant_newsletter_subscription(answer.responder).blank? %>
                <div class="meta menu_item_subscribe <% unless answer.responder.logo && answer.responder.logo.attachment? -%> no_avatar_1<% end -%>" >
                    <%= link_to 'Subscribe', media_subscribe_restaurant_path(answer.responder),:class=>"subscribe" %>
                </div>
                
         <% else %>
                <div class="meta menu_item_subscribe menu_items_unsubscribe <% unless answer.responder.logo && answer.responder.logo.attachment? -%> no_avatar<% end -%>" >
                    <%= link_to 'Unsubscribe', media_subscribe_restaurant_path(answer.responder),:class=>"subscribe" %>
                </div>    
            <% end %>                    
        
    <% end %> 
        <div class="clear"></div>
    </div>
	<div class="question_answer">
	    <% if answer.photo_file_name.present? -%>
	        <p><%= image_tag answer.photo(:medium) %></p>
	    <% end -%>

	    <p class="answer"><%= answer.answer %></p>
	    <p><span class="datestamp"><%= "Posted #{answer.created_at.strftime("%D")}" %></span></p>
	    <div class="clearfix">&nbsp;</div>
    </div>
<% end %>
<% end -%>

<%= will_paginate(@answers) %>
