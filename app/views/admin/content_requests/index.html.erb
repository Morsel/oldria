<% title "Content Requests (Questions from RIA)" %>

<p><%= link_to (image_tag("plus.png") +"New Content Request (Question from RIA)"), new_admin_content_request_path, :class => 'positive button' %></p>

<% table_for(@content_requests) do |t| %>
  <% t.data :actions => :all, :action_prefix => 'admin' do
       t.cell(:scheduled_at, :heading => "Scheduled"){|c| c.scheduled_at.try(:strftime,"%m/%d")}
       t.cell(:subject)
       t.cell(:body)
       t.cell(:criteria) {|cr| cr.employment_search.readable_conditions.join(", ") }
       t.cell :reply_count, :heading => '', :cell_html => {:class => 'actions reply_count'} do |cr|
         reply_count_link(cr)
       end
    end %>
<% end %>

