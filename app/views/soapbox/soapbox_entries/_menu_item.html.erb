
<% div_for(menu_item,:class=>"comment") do %>
    <header>
        <h4><%= link_to menu_item.name, soapbox_menu_item_path(menu_item) %></h4>
        <% if menu_item.photo_file_name.present? -%>
             <p><%= image_tag menu_item.photo(:thumb) %></p>
        <% end -%>
    </header>
          <p>           
             <%= truncate(menu_item.description, :length => 90) if menu_item.description.present?%>
             <%= link_to "more&nbsp;&#187;", soapbox_menu_item_path(menu_item) if menu_item.description.size > 90%>
          </p>    
<% end %>

