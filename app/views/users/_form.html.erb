<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'text' %>
  </p>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username, :class => 'text' %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'text' %>
  </p>
<% unless action_name == 'edit' %>
  <p>
    <%= f.label :account_type_id %>
    <%= f.collection_select :account_type_id, AccountType.all, :id, :name %>
  </p>
<% end %>
  <p>
    <%= f.label :james_beard_region_id, "Region (Based on James Beard Foundation)" %>
    <%= f.collection_select :james_beard_region_id, JamesBeardRegion.all, :id, :name_and_description %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'text' %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => 'text' %>
  </p>
  <p><%= button_tag "Save", :class => 'positive' %></p>
<% end %>
