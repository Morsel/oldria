<% semantic_form_for [:my_profile, @enrollment] do |f| %>
  <% f.inputs :class => "enrollments" do %>
    <% f.semantic_fields_for :culinary_school do |school| %>
      <%= school.input :name %>
      <%= school.input :city, :input_html => {:class => 'span-5'},
        :wrapper_html => {:class => 'span-5 column'} %>
      <%= school.input :state, :input_html => {:maxlength => 2, :class => 'span-1'},
        :wrapper_html => {:class => 'span-5 column'} %>
      <%= school.input :country, :wrapper_html => {:class => 'clear'} %>
    <% end %>

    <%= f.input :graduation_date %>
    <%= f.input :degree %>
    <%= f.input :focus %>
    <%= f.input :scholarships %>
  <% end %>
  <%= button_tag "Save" %>
<% end %>
