            <%= text_field_tag "feature_search", "", :name => "search[profile_specialties_name_eq][]",:placeholder=>"Search by specialty keywords " %>
        </li>
        <% if params[:controller] == "soapbox/soapbox" %>
          <%= hidden_field_tag :soapbox, "soapbox" %>
