// Remove the status in question
$("#status_<%= @status.id %>").fadeOut('slow');
$("#sidebar_statuses").html('<%= escape_javascript(render :partial => "statuses/user_bar_status", :collection => current_user.statuses.all(:limit => 2)) %>')

$("#flash_notice").animate({opacity:1}, 'fast');

// Hide the Flash after 2 seconds
setTimeout(function(){
	$('#flash_notice:visible').not(":animated").fadeOut('slow');
}, 2000);