<% title "Soapbox", false %>

<section id="all-questions">
  <div id="all-questions-feed<%= "-qotd" if @question_type == 'qotd' %>">
    <h1><%= (@question_type == 'trend')? "Trend Questions" : "Questions of the Day" %></h1>
    <ul>
        <% for question in @featured_items %>
        <li>
            <% link_to soapbox_soapbox_entry_path(question.soapbox_entry) do %>
                <% date = question.scheduled_at %>
                <time datetime="<%= date.try(:strftime,'%Y-%m-%d') %>"><span><%= date.try(:strftime, "%b").upcase %></span><%= date.try(:strftime, "%e") %></time>
                <span class="title"><%= question.display_message || (question.subject if question.respond_to?(:subject)) || (question.message if question.respond_to?(:message)) %></span>
                <span class="reply-count"><span><%= count = question.soapbox_comment_count %></span><%= count > 1 ? "replies" : "reply" %></span>
            <% end %>
        </li>
        <% end %>
    </ul>
    <%= will_paginate(@questions) %>
  </div><!-- /recent-trends -->
</section><!-- / recent-questions -->
