<% restaurant ||= user %>
<div class="identity<% unless restaurant.logo && restaurant.logo.attachment? -%> no_avatar<% end -%>">
<% cache "#{soapbox? ? "public" : "private"}_restaurant_#{restaurant.id}_#{on_mediafeed}", :expires_in => 1.hour do %>
    <div class="avatar">
        <% if restaurant.logo && restaurant.logo.attachment? -%>
          <%= image_tag(restaurant.logo.attachment.url(:thumb), :width => 'auto', :height => 'auto') %>
        <% end -%>
    </div>
    <ul class="identity_details restaurant">
        <li class="employee_name primary">
            <%= link_to_if (restaurant.linkable_profile? || logged_in_on_spoonfeed), restaurant.try(:name), correct_restaurant_path(restaurant) %>
        </li>
        <li class="metro_area">
            <%= restaurant.metropolitan_area.try(:name) %>
        </li>
    </ul>
<% end %>
    <% if(@is_subscribe && current_user && current_user.media? && restaurant.kind_of?(Restaurant) ) %>
        <div class="meta menu_item_subscribe">
            <% if current_user.restaurant_newsletter_subscription(restaurant).blank? %>
                <%= link_to 'Subscribe', media_subscribe_restaurant_path(restaurant),:class=>"subscribe" %>
            <% else %>
                <%= link_to 'Unsubscribe', media_subscribe_restaurant_path(restaurant),:class=>"subscribe" %>
            <% end %>                    
        </div>
    <% end %> 

</div>
