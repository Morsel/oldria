<% title message(@feature), false, @feature_type -%>
<% content_for :fb_description do -%>
<%= @feature_comments.collect { |comment| comment.user.name.to_s + ": " + truncate(comment.comment.to_s) }.join("; ") -%>
<% end if @feature_comments -%>
<% content_for :facebook_meta do -%>
  <meta property="og:type" content="article"/>
  <meta property="og:image" content=""/>
  <meta property="og:url" content="<%= soapbox_soapbox_entry_url(@feature.soapbox_entry) %>"/>
<% end -%>

<article id="trend-article">
  <!-- AddThis Button BEGIN --> 
  <div class="addthis_toolbox"> 
    <a href="http://www.addthis.com/bookmark.php?v=250&amp;username=unpluggedria" class="addthis_button">Share</a> 
  </div> 
  <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#username=unpluggedria"></script> 
  <!-- AddThis Button END -->
  <header>
    <%= soapbox_tabby_title(@feature) %>
    <div class="details">
      <time datetime="<%= @feature.soapbox_entry.published_at.try(:strftime,'%Y-%m-%d') %>"><%= @feature.soapbox_entry.published_at.try(:strftime, "%b %e, %Y") %></time>
      <h2><%= message(@feature) %></h2>

      <!-- Likes and Tweets BEGIN -->
      <script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
      <a href="http://twitter.com/share" class="twitter-share-button">Tweet</a>
      <iframe src="http://www.facebook.com/plugins/like.php?href=<%= URI.escape soapbox_soapbox_entry_url(@feature.soapbox_entry) %>&amp;layout=button_count&amp;show_faces=false&amp;width=154&amp;action=like&amp;font=lucida+grande&amp;colorscheme=light&amp;height=auto&amp;ref=fb_show_<%= @feature.soapbox_entry.id %>" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:90px; height:20px;" allowTransparency="true"></iframe>
      <!-- Likes and Tweets END -->
    </div>
  </header>
  
  <% if @feature_comments %>
  <section id="fb-comments">
    <%= render :partial => 'comment', :collection => @feature_comments, :locals => { :full_text => true, :commentable_class => @feature.class } %>
  </section>
  <% end %>
</article><!-- /front_burner -->

<% content_for :sidebar do -%>
<%= render :partial => 'soapbox/soapbox_entries/front_burner_sidebar' %>
<% end -%>