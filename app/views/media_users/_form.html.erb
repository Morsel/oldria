<% form_for @media_user, :url => media_users_path do |f| %>
  <%= f.error_messages %>
<fieldset>
  <legend>Your Information</legend>
  <p class="span-3 column">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :class => 'text span-3' %>
  </p>
  <p class="span-4 column">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :class => 'text span-4' %>
  </p>
  <p class="clear">
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'text' %>
  </p>
  <p>
    <%= f.label :publication, "Affiliated Publication" %>
    <%= f.text_field :publication, :class => 'text' %><br/>
    <small>(If you are <em>freelance</em>, please put your primary publication)</small>
  </p>
  <p class="bottom">
    <%= f.label :james_beard_region_id, "Region (Based on James Beard Foundation)" %>
    <%= f.collection_select :james_beard_region_id, JamesBeardRegion.all, :id, :name_and_description %>
  </p>
</fieldset>

<fieldset>
  <legend>Desired Login information</legend>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username, :class => 'text' %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'text' %>
  </p>
  <p class="bottom">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => 'text' %>
  </p>
</fieldset>

  <p><%= button_tag "Submit", :class => 'positive' %></p>
<% end %>
