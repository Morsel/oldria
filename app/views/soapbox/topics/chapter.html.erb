<% title "#{@chapter.title} - Behind The Line", false %>

<h1 id="btl-title" class="btl"><%= link_to "<span class=\"btl-art\">Behind the Line</span>", soapbox_topics_path %></h1>

<h2 id="topic_title">Topic: <%= @chapter.topic.title %></h2>
<%= render :partial => 'nav', :locals => { :next_topic => @next_topic, :prev_topic => @previous_topic } %>

<div id="btl_answers" class="btl-my-answers">
  <div id="" class="clear clearfix">
    <h3><%= @chapter.title %></h3>
    <% if @next.present? or @previous.present? -%>
      <nav id="chapter_nav" class="topic-nav clearfix">
        <% if @next.present? -%>
          <%= link_to "Next: #{truncate(@next.title, :length => 20, :omission => '&hellip;')}", chapter_soapbox_topics_path(:chapter_id => @next), :class => 'next' %>
        <% end -%>
        <% if @previous.present? -%>
          <%= link_to "Prev: #{truncate(@previous.title, :length => 20, :omission => '&hellip;')}", chapter_soapbox_topics_path(:chapter_id => @previous), :class => 'prev' %>
        <% end -%>
      </nav>
    <% end -%>
  </div>

  <% for question in @questions -%>
    <% div_for question do %>
      <h4><span class="letter-q">Q:</span> <%= link_to question.title, soapbox_question_path(question) %></h4>
      <% if answer = question.latest_answer %>
        <div class="btl-answer">
            <p>Last answered by:</p>
            <%= render :partial => 'users/identity', :locals => { :user => answer.user } %>
            <p><%= answer.answer %></p>
            <span class="timestamp">Last updated: <%= answer.try(:updated_at).try(:strftime, "%b %e %Y") %></span>
            <div class="clearfix">&nbsp;</div>
        </div>
      <% else %>
        <p>Not answered yet.</p>
      <% end %>
    <% end -%>
  <% end -%>
</div>

<% content_for :sidebar do -%>
<%= render :partial => "sidebar" %>
<% end -%>