<% title "Topics" %>

<% table_for @topics do |t| %>
	<% t.data :actions => [:edit], :action_prefix => 'admin' do
		t.cell(:title)
		t.cell(:roles) { |c| c.question_roles_description }
		t.cell(:chapter_count) { |c| c.chapters.count }
		t.cell(:can_be_deleted?) { |c| link_to "delete", admin_topic_path(c), :method => "delete", :confirm => "Are you sure you want to delete this?" if c.chapters.count == 0 }
    end %>
<% end %>