<div id="my_restaurants" rel="My Restaurants" class="box">
	<h3>Restaurants I Manage</h3>
<% if current_user.managed_restaurants.blank? %>

	<p>You don't manage any restaurants.</p>

<% else %>

	<% current_user.managed_restaurants.reject(&:new_record?).each do |restaurant| %>
	<% div_for restaurant do %>
		<%= link_to h(restaurant.name), restaurant_employees_path(restaurant) %>
	<% end -%>
	<% end %>

<% end %>

<% if false # Hide this %>
<p class="add_restaurant clearfix hidden">
	<%= link_to image_tag("plus.png") + "Sign up a restaurant", new_restaurant_path, :class => 'button positive' %>
</p>
<% end %>

<% unless current_user.restaurants.blank? %>
	<h3>My Restaurants</h3>

	<% current_user.restaurants.each do |restaurant| %>
	<% div_for restaurant do %>
		<%= link_to h(restaurant.name), restaurant_employees_path(restaurant) %>
	<% end -%>
	<% end %>

<% end %>

</div>
