<% if @holiday_reminder.holiday && action_name == 'new' %>
  <% f.inputs :name => "Recipients" do %>
    <%= f.input :recipient_ids,
                :collection => @holiday_reminder.holiday.restaurants,
                # :selected => @holiday_reminder.recipient_ids,
                :as => :check_boxes,
                :wrapper_html => {:class => 'employment_list checkall'},
                :label_method => :name,
                :label => "Who should receive this?",
                :hint => "The folks listed are from the Holiday's master recipient list. The unchecked ones have already responded acceptably."
    %>
  <% end -%>
<% end %>

<% f.inputs do %>
  <%= f.input :scheduled_at %>
  <%= f.input :message, :as => :text, :input_html => {:class => '', :rows => 8} %>
  <% if @holiday_reminder.holiday %>
    <%= f.hidden_field :holiday_id %>
  <% else %>
    <%= f.input :holiday %>
  <% end %>
<% end %>
