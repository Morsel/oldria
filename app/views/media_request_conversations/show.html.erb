<% title "Media Request" %>

<h3>Original Request</h3>
<p><%= @media_request_conversation.media_request.try(:message) %></p>

<div class="comments">
<% if !@comments.blank? %>
<h3>Comments</h3>
<% for comment in @comments %>
	<% div_for comment do %>
		<p class="meta"><%= comment.user.try(:username) %> said:</p>
		<p><%= comment.comment %></p>
	<% end %>
<% end %>

<% else %>
No comments yet
<% end %>
</div>

<h3>Leave a Comment</h3>
<% form_for [@media_request_conversation, @comment] do |f| %>
<%= f.hidden_field :user_id %>
<p>
	<%= f.label :comment %>
	<%= f.text_area :comment %>
</p>
<p class="clearfix"><%= button_tag "Submit" %></p>
<% end %>
