<%= semantic_form_for([:admin, @direct_message]) do |f| %>
  <%= f.inputs do %>
    <%= f.input :receiver, :label => "To", :collection => User.by_last_name %>
    <%= f.input :body, :as => :text, :input_html => {:rows => '4'} %>
  <% end %>

  <% if action_name == 'new' %>
    <%= f.fields_for :attachments do |child_form| -%>
      <p class="attach">Attach files</p>
      <p class="attachfield"><%= child_form.file_field :attachment %></p>
    <% end -%>
  <% end %>

  <p><%= button_tag 'Send', :class => 'positive' %></p>
  <p><%= link_to 'Back', admin_direct_messages_path %></p>
<% end %>
