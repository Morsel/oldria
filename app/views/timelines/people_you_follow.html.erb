<% title "People You Follow", false -%>

<%= render 'nav' %>

<div class="span-9 last">
<% if !current_user.friends.blank? %>
  <div id="read_messages">
    <div id="friend_activity" rel="Friend Activity">
         <h2 class="function-bold with_icon">
           <img src="/images/follow.png" alt="" class="titleicon"/>
           People You Follow
         </h2>
         <% @friend_activity.each do |status| -%>
           <% div_for status, :class=>'clearfix' do -%>
             <%= link_to image_tag(status.user.avatar.url(:thumb)), profile_path(status.user.username), :class => 'avatar' %>
             <p class="message">
               <strong><%= link_to status.user.username, profile_path(status.user.username) %></strong>: <%= status.message %>
             </p>
             <p class="meta">
               posted <%= date_for status.created_at %>
             </p>
           <% end -%>
         <% end -%>
       </div><!-- /friend_activity -->
  </div><!-- /read_messages -->
<% else %>
<div class="box">
    <div class="box">
        <p>Did you know you can follow others on spoonfeed just like you do Facebook? Of course our network is just for restaurant people so it is a lot more useful â€” and private!</p>
        <p><%= link_to 'Find your coworkers and follow them now!', directory_path %></p>
    </div>
</div>
<% end %>
</div>
