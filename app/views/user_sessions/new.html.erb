<% title "Login to SpoonFeed" %>

<% semantic_form_for @user_session do |f| %>
<%= f.error_messages %>
<% f.inputs do %>
	<%= f.input :username, :hint => 'Your <strong>username</strong> or <strong>email</strong>' %>
	<%= f.input :password %>
<% end %>

<p><%= button_tag image_tag('key.png') + "Login", :name => 'submit' %></p>

<% end %>


<p class="clear forgot"><small><%= link_to "Forgot your password?", new_password_reset_path %></small></p>
