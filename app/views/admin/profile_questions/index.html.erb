<% title "Profile Questions" %>

<% for chapter in @questions.keys %>

<h2><%= chapter.title_with_topic %>:</h2>

<% table_for @questions[chapter] do |t| %>
	<% t.data :actions => [:edit, :destroy], :action_prefix => 'admin' do
      t.cell(:handle, :heading => '', :cell_html => {:class => 'small handle'}) { "[drag]" }
		t.cell(:title)
		t.cell(:roles) { |c| c.restaurant_roles.map(&:name).to_sentence }
  end %>
<% end %>

<% end %>

<div><%= link_to "Add new question", new_admin_profile_question_path, :class => "button" %></div>
<div class="clear">
    <%= link_to "Manage topics", admin_topics_path, :class => "button" %>
    <%= link_to "Manage chapters", admin_chapters_path, :class => "button" %>
    <%= link_to "Manage roles", categories_admin_restaurant_roles_path, :class => "button" %>
</div>