<% title "Behind the Line", false %>
<h1 id="btl-title" class="btl"><span class="btl-art">Behind the Line:</span> <span class="name"><%= @user.name %></span></h1>
<h2 id="topic_title">Topic: <%= @chapter.topic.title %></h2>
<%= render :partial => 'topic_nav', :locals => { :next_topic => @next_topic, :prev_topic => @previous_topic } %>

<div id="chapter_title" class="clear clearfix">
  <h3><%= @chapter.title %></h3>
  <nav id="chapter_nav" class="topic-nav clearfix">
      <%= link_to "Next: #{truncate(@next.title, :length => 20, :omission => '&hellip;')}", link_for_questions(:user_id => @user.id, :chapter_id => @next.id), :class => 'next' if @next %>
      <%= link_to "Prev: #{truncate(@previous.title, :length => 20, :omission => '&hellip;')}", link_for_questions(:user_id => @user.id, :chapter_id => @previous.id), :class => 'prev' if @previous %>
  </nav>
</div>

<% if @user == current_user %><%# let's edit these answers %>

<% for question in @questions %>
  <% div_for question do %>
      <h4>Q: <%= question.title %></h4>

      <%= render :partial => "profile_answers/form", :locals => { :answer => question.find_or_build_answer_for(current_user) } %>
  <% end %>
<% end %>

<p class="clear">Answers to your questions will be posted on your profile and can be used by Restaurant Intelligence Agency to increase traffic to the site.</p>

<% else -%><%# no editing by other users %>

<% for question in @questions -%>
  <% div_for question do %>
      <h4>Q: <%= link_to question.title, link_for_question(question) %></h4>
      <% if answer = question.answer_for(@user) %>
        <p><%= answer.answer %></p>
        Last updated: <%= answer.try(:updated_at).try(:strftime, "%b %e %Y") %>
      <% else %>
        <p>Not answered yet.</p>
      <% end %>
  <% end -%>
<% end -%>

<% end -%>
