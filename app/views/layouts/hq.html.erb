  <title><%= h(yield(:title) || "Untitled") %> - Restaurant Intelligence Agency</title>
  <meta name="description" content="Restaurant Intelligence Agency website">
  <meta name="author" content="Restaruant Intelligence Agency">
  <link rel="shortcut icon" href="/favicon-ria.ico">
  <link rel="stylesheet" href="/hq/_css/ria_hq.css?v=1">

</head>

