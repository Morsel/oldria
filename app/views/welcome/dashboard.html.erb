<% title "Dashboard" %>

	<div id="direct_messages" class="span-6">
<% if !@direct_messages.blank? %>
		<h3>Messages to You</h3>
	<% for message in @direct_messages %>
	<% div_for message, :class => 'clearfix' do %>
		<%= image_tag message.sender.avatar.url(:thumb), :class => 'left' %>
		<h5><%= message.title %></h5>
		<p>
			<%= message.body %>
		</p>
		<p class="meta">
			from <%= link_to message.sender.username, message.sender %> | 
			<%= message.created_at.to_s(:short) %> | 
			<%= link_to "reply", reply_direct_message_path(message) %>
		</p>
	<% end # div -%>
	<% end # for loop %>
<% end -%>
	</div>
	
		<div id="media_requests" class="span-6 last" rel="Media Requests">
	<% if !@user.received_media_requests.blank? %>
	<h3>Media Requests for You</h3>
		<% for request in @user.received_media_requests %>
		<% div_for request, :class => 'clearfix' do %>
			<p class="message">
				<%= request.message %>
			</p>
		<% end # div -%>
		<% end # for loop %>
	<% end -%>
		</div>	
	

<div id="sent_messages" class="span-6">
<% if !@sent_messages.blank? %>
	<h3>Sent Messages</h3>
	<% for message in @sent_messages %>
	<% div_for message, :class => 'sent_message clearfix' + (message.from_admin? ? ' admin' : '') do %>
		<%= image_tag message.receiver.avatar.url(:thumb), :class => 'left' %>
		<h5><%= message.title %></h5>
		<p>
			<%= message.body %>
		</p>
		<p class="meta">
			to <%= link_to message.receiver.username, message.receiver %> | 
			<%= message.created_at.to_s(:short) %>
		</p>
	<% end # div -%>
	<% end # for loop %>
<% end -%>
	</div> 
	
	<div id="admin_messages" class="span-6 last">
<% if !@admin_direct_messages.blank? %>
		<h3>Administrative Notices</h3>
	<% for message in @admin_direct_messages %>
	<% div_for message, :class => 'clearfix admin' do %>
		<%= image_tag message.sender.avatar.url(:thumb), :class => 'left' %>
		<h5><%= message.title %></h5>
		<p>
			<%= message.body %>
		</p>
		<p class="meta">
			from <%= link_to message.sender.username, message.sender %> | 
			<%= message.created_at.to_s(:short) %> | 
			<%= link_to "reply", reply_direct_message_path(message) %>
		</p>
	<% end # div -%>
	<% end # for loop %>
<% end -%>
	</div>
	
	<div id="friend_activity" class="span-12" rel="Friend Activity">
<% if !@friend_activity.blank? %>
		<h3>Friend Activity</h3>
	<% for status in @friend_activity %>
	<% div_for status, :class => 'clearfix admin' do %>
		<%# image_tag status.user.avatar.url(:thumb), :class => 'left' %>
		<p class="message">
			<%= status.message %>
		</p>
		<p class="meta">
			posted by <%= link_to status.user.username, status.user %> | 
			<%= status.created_at.to_s(:short) %>
		</p>
	<% end # div -%>
	<% end # for loop %>
<% end -%>
	</div>


