<% semantic_form_for @user do |f| %>

<% f.inputs :name => 'Your Information' do %>
	<%= f.input :first_name, :input_html => {:class => 'span-3'}, :wrapper_html => {:class => 'span-3'} %>
	<%= f.input :last_name, :input_html => {:class => 'span-4'}, :wrapper_html => {:class => 'span-4'} %>
	<%= f.input :email, :wrapper_html => {:class => 'clear'} %>
	<%= f.input :james_beard_region, :label => 'Region', :wrapper_html => {:class => 'bottom'} %>
<% end %>

<% f.inputs :name => 'Preferences' do %>
  <%= f.input :prefers_receive_email_notifications, :as => :boolean, :label => 'Receive email notifications?' %>
<% end %>

<% f.inputs :name => 'Desired Login Information' do %>
	<%= f.input :username, :hint => 'Change your username, if you like, by entering a new one here' %>
	<%= f.input :password, :input_html => {:autocomplete => "off"}, :hint => 'Type the new password you would like to use' %>
	<%= f.input :password_confirmation, :input_html => {:autocomplete => "off"}, :hint => 'Re-type the password from above to confirm' %>
	<% unless controller.action_name == "edit" %>
		<%= f.input :agree_to_contract, :label => 'Agree to Contract?', :as => :boolean %>
	<% end %>
<% end %>
<p><%= button_tag "Save", :class => 'positive' %></p>

<% end %>
