<li id="keyword-otms-li">
    <fieldset>
        <legend class="label"> 
            <label >I would like to receive news from the following OTMS:</label>
        </legend>                     
    </fieldset>
    <ol>    	
        <%keyword.each_with_index do |otm_keyword,index|%>
            <% index = index+2000%>
            <% checked = (@user.filtered_user_keywords("OtmKeyword").include?(otm_keyword) || @checked_otm_keywords.include?(otm_keyword.id.to_s) ) %>
            <li>
                <label for="user_user_keywords_attributes_<%=index%>_follow_keyword_id">                    
                    <%= hidden_field_tag "user[user_keywords_attributes][#{index}][follow_keyword_type]",'OtmKeyword',:disabled => !checked %>
                    <%= hidden_field_tag "user[user_keywords_attributes][#{index}][user_id]",@user.id ,:disabled=> !checked %>
                    <%= check_box_tag "user[user_keywords_attributes][#{index}][follow_keyword_id]",otm_keyword.id,checked%>                    
                    <%=otm_keyword.name%>
                </label>
            </li>   
        <%end%>

    </ol>
</li>
<div class="clear"> </div>  