<% form_for @media_user, :url => media_users_path do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :class => 'text' %>
  </p>
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :class => 'text' %>
  </p>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username, :class => 'text' %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'text' %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'text' %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => 'text' %>
  </p>
  <p><%= button_tag "Submit", :class => 'positive' %></p>
<% end %>
