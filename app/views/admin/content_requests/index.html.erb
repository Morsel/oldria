<% title "Content Requests (Questions from Oz)" %>

<% table_for(@content_requests) do |t| %>
  <% t.data :actions => :all, :action_prefix => 'admin' do
       t.cell(:subject)
       t.cell(:body)
       t.cell(:criteria) {|t| t.employment_search.readable_conditions.join(", ") }
    end %>
<% end %>

<p><%= link_to "New Content Request (Question from Oz)", new_admin_content_request_path %></p>
