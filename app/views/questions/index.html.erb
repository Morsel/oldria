<% title "Behind the Line" %>

<h2><%= @chapter.topic.title %></h2>
<h3><%= @chapter.title %></h3>
<div style="clearfix">
    <%= link_to "Prev: #{@previous.title}", user_questions_path(:user_id => @user.id, :chapter_id => @previous.id) if @previous %>
    <%= link_to "All Chapters for #{@chapter.topic.title}", chapters_user_questions_path(:user_id => @user.id, :topic_id => @chapter.topic.id) %>
    <%= link_to "Next: #{@next.title}", user_questions_path(:user_id => @user.id, :chapter_id => @next.id) if @next %>
</div>

<% for question in @questions %>
  <% div_for question do %>
      <h4>Q: <%= question.title %></h4>

      <% if @user == current_user %>
        <%= render :partial => "profile_answers/form", :locals => { :answer => question.find_or_build_answer_for(current_user) } %>
      <% else %>
        <% if answer = question.answer_for(@user) %>
          <p><%= answer.answer %></p>
          Last updated: <%= answer.try(:updated_at).try(:strftime, "%b %e %Y") %>
        <% else %>
          <p>Not answered yet.</p>
        <% end %>
      <% end %>
  <% end %>
<% end %>

<% if @user == current_user %>
  <p class="clear">Answers to your questions will be posted on your profile and can be used by Restaurant Intelligence Agency to increase traffic to the site.</p>
<% end %>