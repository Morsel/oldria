<%# Holidays %>
<% if message.respond_to?(:restaurant) %>
  <%= render 'message_reply_link', :message => message %>

<%# Trend Questions and Content Requests %>
<% elsif current_user.unread_grouped_admin_discussions[message] %>
  <%
  discussions = current_user.unread_grouped_admin_discussions[message]
  discussions_with_replies = discussions.select do |discussion|
    discussion.comments_count > 0
  end
  discussions_without_replies = discussions - discussions_with_replies
   %>
   <%= render :partial => 'message_reply_link', :collection => discussions_with_replies, :as => :message %>

   <%= not_responded_phrase_for_discussions(discussions_without_replies) %>

   <% link_to new_quick_reply_path(:message_id => message.id, :message_type => message.class.name), :class => 'colorbox quickreply' do %>
     Quick reply&nbsp;&raquo;
   <% end %>

<%# QOTD %>
<% else %>
  <%= reply_link_for_message(message) %>
<% end %>
