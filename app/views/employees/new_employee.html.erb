<% title "Invite an Employee to SpoonFeed" %>

<%= semantic_form_for @employment, :url => restaurant_employees_path(@restaurant) do |form| %>
  <%= form.semantic_fields_for :employee, @employee do |f| -%>
	<%= f.inputs do %>
    <%= f.input :first_name, :input_html => {:class => 'span-3',:size => 50}, :wrapper_html => {:class => 'span-3 column'} %>
    <%= f.input :last_name, :input_html => {:class => 'span-4',:size => 50}, :wrapper_html => {:class => 'span-4 column'} %>
    <%= f.input :username, :hint => 'For someone whose name is "John Doe", a good username might be "JohnDoe"',:input_html => {:size => 50}, :wrapper_html => {:class => 'clear'}, :required => true %>
    <%= f.input :email, :wrapper_html => {:class => 'clear'},:input_html => {:size => 50} %>
    <% end -%>
  <% end -%>

  <p><%= button_tag "Invite Employee", :class => 'submit' %></p>
<% end %>


