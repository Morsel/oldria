<% title "Your Digital Dashboard", false %>

<div id="restaurant_profile_view" class="edit clear clearfix">    
  <%= render 'welcome/welcome_header' %>

    <div id="editing_restaurant">
        <div id="restaurant_pages" class="clearfix">
           <div id="restaurant_features_content" style="width:100%;">
                <div class="clearfix clear">
                    <div id="dashboard-left-column">part 1 

                    </div>
                    <div id="dashboard-right-column"> 
						<%= render 'welcome/announcements' %>
                        
                    </div>
                    <div class="pagination">
                        <%= link_to "More" ,"#" %>
                    </div>

                </div>
            <!-- </div> -->
          </div>
        </div>
    </div><!-- /editing_restaurant -->
</div><!-- /restaurant_profile_view -->

<% content_for :javascript do %>
<script type="text/javascript">
  jQuery(function($) {
    var page=1;
    $(".pagination a").live("click", function(e) {
        e.preventDefault();
        $(".pagination").html("Loading...");
        page++;
        $.ajax({
            url: "<%=welcome_url%>?page="+page,
            dataType: "script",
            complete:function(data) {                  
            if(data.responseText.length > 20)         
            {
                $('#dashboard-right-column').append(data.responseText)
                $(".pagination").html('<%= link_to "More" ,"#" %>');
            }else{
                $(".pagination").html('No more records');
            }
        }
        
      });
    });
  });
 </script>
<% end%>  