<% title "Profile Questions: #{@chapter.title_with_topic}"%>

<% table_for @questions do |t| %>
    <% t.data :action_prefix => 'admin' do
        t.cell(:handle, :heading => '', :cell_html => {:class => 'small handle'}) { "[drag]" }
        t.cell(:title)
        t.cell(:edit, :heading => '') { |c| link_to("edit", edit_admin_profile_question_path(c, :chapter_id => params[:chapter_id])) }
        t.cell(:delete, :heading => '') { |c| link_to("delete", admin_profile_question_path(c), :method => :delete) }
    end %>
<% end %>