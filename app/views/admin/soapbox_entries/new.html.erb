<% title "New Soapbox Entry" %>

<% semantic_form_for [:admin, @soapbox_entry] do |f| %>
	<% if @soapbox_entry.featured_item %>
		<%= render @soapbox_entry.featured_item %>
		<%= f.hidden_field :featured_item_id %>
		<%= f.hidden_field :featured_item_type, :value => @soapbox_entry.featured_item.class %>
	<% end %>

	<% f.inputs do %>
		<%= f.input :published_at %>
		<%= f.input :daily_feature %>
	<% end %>

	<%= button_tag "Save" %>
<% end %>
