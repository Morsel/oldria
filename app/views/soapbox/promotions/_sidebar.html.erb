<div id="sidebar">
  <aside id="recent-activity">
    <header>
      <h1>Newsfeed</h1>
    </header>
    <% cache('newsfeed_sidebar', :expires_in => 1.hour) do -%>
      <ol id="newsfeed">
          <% for promotion in recent_newsfeed %>
          <li>
            <header class="feed-item-title">
                <%= link_to "#{promotion.restaurant.name}: #{promotion.title}", soapbox_promotion_path(promotion) %>
            </header>
          </li>
          <% end %>
      </ol><!-- /activity-feed -->
    <% end -%>
    <div id="feed-bottom"></div>
    <footer>
      <div id="activity-chooser-all">
        <span><%= link_to "View all &nbsp;&#187;", soapbox_promotions_path, :id => "view-all-questions" %></span>
      </div>
    </footer>
  </aside><!-- /recent-activity -->
  <nav id="participate">
    <%= link_to "Login to participate", login_path, :class => "button", :id => "login-participate" %>
    <span>or</span>
    <%= link_to "Request an invitation", '/soapbox/request-invitation', :class => "button", :id => "request-invite" %>
  </nav><!-- /participate -->
</div><!-- /sidebar -->