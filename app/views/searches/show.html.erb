<% title "Search" %>

<%= render :partial => 'form' %>

<% if !@users.blank? %>
<h2>Search Results</h2>
<table id="search-results">
  <tr>
    <th></th>
    <th>Name</th>
    <th>Username</th>
  </tr>
  <% for user in @users %>
    <tr class="search-result">
      <td><%= link_to image_tag(user.avatar.url(:thumb)), profile_path(user.username) %></td>
      <td><%=h user.name %></td>
      <td><%= link_to user.username, profile_path(user.username) %></td>
      <td><%= link_to "follow this user", followings_path(:friend_id => user), :method => :post, :class => 'button positive'%></td>
    </tr>
  <% end %>  
</table>
<% else %>
<% end %>
