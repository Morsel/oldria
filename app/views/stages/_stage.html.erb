<% content_tag_for :li, stage do %>
  <%= stage.establishment %> with <%= stage.expert %>, 
  <% if stage.end_date %>
  <%= stage.start_date.strftime("%m/%d/%y") %> - <%= stage.end_date.strftime("%m/%d/%y") %>
  <% else %>
  <%= stage.start_date.strftime("%Y") %>
  <% end %>
  
  <% if action_name != 'show' %>
    <%= link_to "Edit", edit_my_profile_stage_path(stage), :class => 'colorbox' %>
    <%= link_to "Destroy", my_profile_stage_path(stage), :method => :delete, :class => 'delete' %>
  <% end %>
<% end %>
