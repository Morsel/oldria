<div class="shadow-box box">
  <dl class="event-meta">
    <dt>Date</dt>
    <dd><%= @event.start_at.to_formatted_s(:sentence) %> - <%= @event.end_at.to_formatted_s(:sentence) %></dd>
    <dt>Location</dt>
    <dd><%= @event.location %></dd>
    <dt>Type</dt>
    <dd><%= @event.calendar %></dd>
    <% if @event.status -%>
    <dt>Status</dt>
    <dd><%= @event.status %></dd>
    <% end %>
  </dl>

  <%= simple_format(@event.description) %>

  <% if @event.attachments.present? %>
    <p class="attachments-header">Attachments</p>
    <%= render @event.attachments %>
  <% end %>
</div>