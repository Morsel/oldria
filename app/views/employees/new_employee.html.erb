<% title "Invite an Employee to SpoonFeed" %>

<% semantic_form_for @employment, :url => restaurant_employees_path(@restaurant) do |form| %>
  <%= form.hidden_field :restaurant_role_id %>
  <%= form.hidden_field :omniscient %>

  <% @employment.subject_matter_ids.each do |sm| %>
    <%= hidden_field_tag 'employment[subject_matter_ids][]', sm %>
  <% end -%>

  <% form.semantic_fields_for :employee, @employee do |f| -%>
    <%= f.input :first_name, :input_html => {:class => 'span-3'}, :wrapper_html => {:class => 'span-3 column'} %>
    <%= f.input :last_name, :input_html => {:class => 'span-4'}, :wrapper_html => {:class => 'span-4 column'} %>
    <%= f.input :username, :hint => 'For someone whose name is "Jim Doe", a good username might be "JimDoe"', :wrapper_html => {:class => 'clear'}, :required => true %>
    <%= f.input :email, :wrapper_html => {:class => 'clear'} %>
    <%= f.input :password, :input_html => {:autocomplete => "off"}, :required => true, :label => "Temporary Password" %>
    <%= f.input :password_confirmation, :input_html => {:autocomplete => "off"}, :required => true %>
  <% end -%>

  <p><%= button_tag "Invite Employee", :class => 'submit' %></p>
<% end %>
