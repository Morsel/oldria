<li>
  <time class="feed-item-date" datetime="<%= sidebar_item.soapbox_entry.published_at %>"><%= sidebar_item.soapbox_entry.published_at.strftime("%m/%d") %>:</time>
  <header class="feed-item-title">
      <%= link_to message(sidebar_item), soapbox_soapbox_entry_path(sidebar_item.soapbox_entry) %>
  </header>
  <aside class="feed-item-reply-count">
      <% link_to soapbox_soapbox_entry_path(sidebar_item.soapbox_entry) do %>
      <span class="num"><%= count = sidebar_item.comments(false).count %></span> <%= count > 1 ? "replies" : "reply" %>
      <% end %>
  </aside>
</li>