<% title "Profile Directory" %>
<%= link_to 'Switch to Restaurant Directory', correct_restaurant_directory_path, :class => "directory_switch" %>

<%= title_for_search %>

<% if false %>
<div class="clearfix">
    <%= link_to "Search Users", directory_path %>
    <%= link_to "Search Restaurants", restaurant_directory_path %>
</div>
<% end %>

<% if @use_search %>
<div id="directory_search">
    <% form_tag do %>
        <%= render :partial => 'directory/search_criteria' %>
    <% end %>
</div>
<% end %>

<div id="directory_list">
    <%= render :partial => 'directory/search_results' %>
</div>

<% content_for :sidebar do -%>
<%= render :partial => 'soapbox/sidebar' %>
<% end if soapbox? -%>