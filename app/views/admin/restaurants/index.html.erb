<% title "Restaurants" %>
<%= table_for(@restaurants) do |t| %>
  <%= t.head do %>
    <%= t.r do %>
      <%= t.h('Name') %>
      <%= t.h('Account type') %>
      <%= t.h('City') %>
      <%= t.h('State') %>
      <%= t.h('Manager') %>
      <%= t.h('Media contact') %>
      <%= t.h('Metropolitan area') %>
      <%= t.h('Cuisine') %>
      <th></th>
      <th></th>
      <th></th>
    <% end %>
  <% end %>
  <%= t.body do |restaurant| %>
    <tr class="<%= cycle('odd','even') %>">
      <%= t.d(h(restaurant.name)) %>
      <%= t.d(h(restaurant.account_type)) %>
      <%= t.d(h(restaurant.city)) %>
      <%= t.d(h(restaurant.state)) %>
      <%= t.d(h(restaurant.try(:manager).try(:name))) %>
      <%= t.d(h(restaurant.try(:media_contact).try(:name))) %>
      <%= t.d(h(restaurant.try(:metropolitan_area).try(:name))) %>
      <%= t.d(h(restaurant.try(:cuisine).try(:name))) %>
      <%= t.d(h(link_to "Edit",edit_admin_restaurant_path(restaurant),:class=>'admin-actions-restaurant')) %>
      <%= t.d(h( link_to "Destroy",admin_restaurant_path(restaurant), :method => :delete,:confirm => "Are you sure ?" ,:class=>'admin-actions-restaurant')) %>
  <% end %>
<% end %>