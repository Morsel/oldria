<% if  @promotion.blank? %>
  <% form_for @menu_item, :url => mediafeed_request_information_mail_path, :html => {:id=>"editing_restaurant",:method => :post} do |f| %>
    
      <table>  
        <tr> <td class="from"> From: </td> <td> notifications@restaurantintelligenceagency.com </td></tr>
        <tr> <td class="to"> Name: </td> <td><%= f.text_field :name ,:class=>'menu_name'%></td></tr>
      </table>

      <table>
        <tr>
          <td class="table_width"> </td>
          <td>  <%= text_area_tag 'comment',nil,:placeholder => "Add a comment..."  %>  </td>
        <tr>
        <% if @menu_item.restaurant.manager.avatar? -%>
          <td class="table_width"> </td>
          <td><div class="menu"><%= image_tag(@menu_item.restaurant.manager.avatar.url(:thumb), :width => 'auto', :height => 'auto') %></div></td>
        <% end -%>  
          <td class="table_width"> </td>
          <td><div class="manager"><%= @menu_item.restaurant.manager.name %></td>
        </tr>

        <tr>
          <td><div class="descr"><%= truncate(@menu_item.description,:length => 30) %></div>
          </td>
        </tr>
          <%= f.hidden_field :name, :value => @menu_item.name %>
          <%= f.hidden_field :description, :value => @menu_item.description %>
          <%= f.hidden_field :id, :value => params[:menu_item_id] %>
      <tr>
        <td>
        <% button_tag :class => 'positive' do %>Send <% end %>
        </td>
      </tr>
      </table>
  <% end %>

<% else %>

  <% semantic_form_for @promotion, :url => mediafeed_request_information_mail_path, :html => {:id=>"editing_restaurant",:method => :post} do |f| %>
    <table>  
      <tr> <td class="from"> From: </td> <td> notifications@restaurantintelligenceagency.com </td></tr>
      <tr> <td class="to"> Name: </td> <td><%= f.text_field_tag :name ,@promotion.title,:class=>'menu_name'%></td></tr>
    </table>

    <table>
      <tr>
        <td class="table_width"> </td>
        <td>  <%= text_area_tag 'comment',nil,:placeholder => "Add a comment..."  %>  </td>
      <tr>
      <% if @promotion.restaurant.manager.avatar? -%>
        <td class="table_width"> </td>
        <td><div class="menu"><%= image_tag(@promotion.restaurant.manager.avatar.url(:thumb), :width => 'auto', :height => 'auto') %></div></td>
      <% end -%>  
        <td class="table_width"> </td>
        <td><div class="manager"><%= @promotion.restaurant.manager.name %></td>
      </tr>

      <tr>
        <td><div class="descr"><%= truncate(@promotion.details,:length => 50) %></div>
        </td>
      </tr>
        <%= f.hidden_field :title, :value => @promotion.title %>
        <%= f.hidden_field :details, :value => @promotion.details %>
        <%= f.hidden_field :id, :value => params[:promotion_id] %>
      <tr>
        <td>
        <% button_tag :class => 'positive' do %>Send <% end %>
        </td>
      </tr>
    </table>
  <% end %>

<% end %>



