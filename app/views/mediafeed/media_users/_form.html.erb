<% button_text = @media_user.new_record? ? "Signup" : "Save" -%>
<% url = @media_user.new_record? ? mediafeed_media_users_path : mediafeed_media_user_path -%>
<% semantic_form_for @media_user, :url => url do |f| %>

<% f.inputs :name => 'Your Information', :class => 'editing basics' do %>
	<%= f.input :first_name, :input_html => {:class => 'span-3'}, :wrapper_html => {:class => 'span-3'} %>
	<%= f.input :last_name, :input_html => {:class => 'span-4'}, :wrapper_html => {:class => 'span-4'} %>
	<%= f.input :email, :wrapper_html => {:class => 'clear'} %>
	<%= f.input :publication, :label => "Affiliated Publication", :hint => "If you are <em>freelance</em>, please put your primary publication" %>
<% end %>

<% f.inputs :name => 'Desired Login Information', :class => 'editing basics' do %>
	<%= f.input :username, :input_html => {:autocomplete => "off"} %>
	<%= f.input :password, :input_html => {:autocomplete => "off"} %>
	<%= f.input :password_confirmation, :input_html => {:autocomplete => "off"} %>
	<p>
  	<%= button_tag button_text, :class => 'positive' %>
  </p>
<% end %>


<% end %>
