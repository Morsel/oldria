
<% title "A la Minute" %>

<!-- AddThis Button BEGIN -->
<div class="addthis_toolbox">
    <%= link_to "Share", "http://www.addthis.com/bookmark.php?v=250&amp;username=unpluggedria", :class => "addthis_button" %>
</div>
<%= javascript_include_tag "http://s7.addthis.com/js/250/addthis_widget.js#username=unpluggedria" %>
<% javascript_tag do %>
  var addthis_share = {
    url: '<%= soapbox_a_la_minute_question_url(@question) %>',
  }
<% end %>
<!-- AddThis Button END -->

<div id="answers">
  <h2><%= @question.question %></h2>
  <%#= render :partial => 'answer', :collection => @answers, :as => :answer %>
  <%#= render :partial => 'single_answer', :locals => { :answer => @answers.first}  %>
  <% content_tag_for(:div, @answers.first.responder, :answer_for, :class => 'a_la_minute_answer') do %>
    <%= render :partial => "restaurants/identity", :locals => { :restaurant => @answers.first.responder } if @answers.first.responder %>

    <div>
        <%= h @answers.first.answer %> <br />
        <p><span class="datestamp"><%= "Posted #{@answers.first.created_at.strftime("%D")}" %></span> - <%= link_to "Share this entry", soapbox_a_la_minute_answer_path(@answers.first) %></p>
    </div>
    <%= render :partial => "tags", :locals => { :answer => @answers.first } if @answers.first %>



  <% end %>
</div>

<% #content_for :sidebar do -%>
<%#= render :partial => 'sidebar' %>
<% #end -%>

<% content_for :sidebar do -%>
<%= render :partial => 'soapbox/restaurant_sidebar_without_account', :locals => { :restaurant => @answers.first.responder } %>
<% end -%>

