  <p> <%= @fact_message %></p>	
</li>
<% end %>



<% unless @menu_item_message.blank?%>
	<li>
	  <p>
	  <%=link_to "Menu Items",restaurant_menu_items_url(@visitor_obj.restaurant)%></p>
	  <p><%= @menu_item_message %></p>
	</li>
<% end %>

<% unless @a_la_minute_message.blank?%>
