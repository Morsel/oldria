<h1>Editing restaurant_fact_sheet</h1>

<% semantic_form_for @restaurant_fact_sheet, :url => restaurant_fact_sheet_path(@restaurant), :html => { :method => :put } do |f| %>
  <%= f.error_messages %>
  <% f.inputs :name => "Parking and Directions" do %>
    <%= f.input :venue %>
    <%= f.input :intersection %>
    <%= f.input :neighborhood %>
    <%= f.input :parking, :as => :select, :collection => parking_options %>
    <%= f.input :public_transit %>
  <% end %>

  <% f.inputs :name => "Pricing" do %>
    <%= f.input :dinner_average_price %>
    <%= f.input :lunch_average_price %>
    <%= f.input :brunch_average_price %>
    <%= f.input :breakfast_average_price %>
    <%= f.input :children_average_price %>
    <%= f.input :small_plate_min_price %>
    <%= f.input :small_plate_max_price %>
    <%= f.input :large_plate_min_price %>
    <%= f.input :large_plate_max_price %>
    <%= f.input :dessert_plate_min_price %>
    <%= f.input :dessert_plate_max_price %>
    <%= f.input :wine_by_the_glass_count %>
    <%= f.input :wine_by_the_glass_min_price %>
    <%= f.input :wine_by_the_glass_max_price %>
    <%= f.input :wine_by_the_bottle_count %>
    <%= f.input :wine_by_the_bottle_min_price %>
    <%= f.input :wine_by_the_bottle_max_price %>
    <%= f.input :wine_by_the_bottle_details, :as => :text %>
  <% end %>

  <% f.inputs :name => "Hours" do %>
  <% end %>

  <% f.inputs :name => "Guest Services" do %>
    <%= f.input :reservations, :as => :select, :collection => reservation_options %>
    <%= f.input :cancellation_policy, :as => :text %>
    <%= f.input :payment_methods %>
    <%= f.input :byob_allowed, :as => :radio, :collection => [["Yes", true], ["No", false]] %>
    <%= f.input :corkage_fee %>
    <%= f.input :dress_code %>
    <%= f.input :delivery %>
  <% end %>

  <% f.inputs :name => "Design" do %>
    <%= f.input :architect_name %>
    <%= f.input :graphic_designer %>
    <%= f.input :furniture_designer %>
    <%= f.input :furniture_manufacturer %>
    <%= f.input :flooring, :as => :text %>
    <%= f.input :millwork, :as => :text %>
    <%= f.input :china, :as => :text %>
    <%= f.input :kitchen_equipment, :as => :text %>
    <%= f.input :lighting, :as => :text %>
    <%= f.input :draperies, :as => :text %>
    <%= f.input :square_footage %>
  <% end %>

  <% f.inputs :name => "Miscellaneous" do %>
    <%= f.input :wheelchair_access %>
    <%= f.input :smoking, :as => :select, :collection => smoking_options %>
  <% end %>

  <% f.buttons do %>
    <%= button_tag 'Update' %>
  <% end %>
<% end %>