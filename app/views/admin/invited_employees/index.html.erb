<% title "Invited Employees" %>

<%= table_for @invited_employees do |t| %>
  <%= t.head do %>
    <%= t.r do %>
      <%= t.h('First name') %>
      <%= t.h('Last name') %>
      <%= t.h('Email') %>
    <% end %>
  <% end %>
  <%= t.body do |invited_employee| %>
    <tr class="<%= cycle('odd','even') %>">
      <%= t.d(h(invited_employee.try(:first_name))) %>
      <%= t.d(h(invited_employee.try(:last_name))) %>
      <%= t.d(h(invited_employee.email)) %>
    <% end %>
  <% end %>
