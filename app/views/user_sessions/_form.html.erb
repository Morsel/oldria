
<% semantic_form_for @user_session do |f| %>

  <% f.inputs do %>
  	<%= f.input :username, :hint => 'You can use your <strong>username</strong> or <strong>email address.</strong>' %>
  	<%= f.input :password %>
    <p class="clear forgot"><%= link_to "Forgot your password?", new_password_reset_path %></p>
    <li>
      <label><%= f.check_box :remember_me %> Remember me?</label>
    </li>
  <% end %>

  <p><%= button_tag image_tag('key.png') + "Login", :name => 'submit' %></p>

<% end %>

<% unless mediafeed? %>
<div class="fb">
    Or login with Facebook:
    <p><%= fb_login_link fb_login_path %></p>
</div>
<% end %>
