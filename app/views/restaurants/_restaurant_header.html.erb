<% title @restaurant.name, false -%>

<header id="restaurant_header">

    <div id="restaurant_actions">
      <% unless editing? -%>
        <% if can? :edit, @restaurant %>
          <%= link_to 'Edit Restaurant', edit_restaurant_path(@restaurant), :class=>'edit_restaurant' %>
        <% end -%>
        <%= link_to 'Start a discussion', new_discussion_path(:restaurant_id => @restaurant.id), :class => 'start_discussion' unless on_soapbox %>
        <%= link_to 'Share Profile', new_discussion_path(:restaurant_id => @restaurant.id), :class => 'share_profile' %>
      <% else -%>
        <%= link_to 'Back to public view', restaurant_path(@restaurant), :class => 'backtopublic' %>
      <% end -%>
    </div><!--#restaurant_actions-->


  <%= image_tag logo_for(@restaurant).attachment.url(:small), :width=>'100' %>
  <h1 id="name"><%= restaurant_link(@restaurant) %></h1>

  <div id="restaurant_meta" class="">
    <p class="address"><%= @restaurant.address_parts.join("<br />") %></p>
    <p>Metropolitan Area: <%=h @restaurant.metropolitan_area.try(:name) %><br/>
    Region: <%=h @restaurant.james_beard_region.try(:name) %></p>
  </div><!-- /restaurant_meta -->


  <% unless editing? or @restaurant.restaurant_features.blank? -%>
    <div id="restaurant_features" class="clear clearfix">
      <span>Features: </span>
      <ul class="tags clearfix">
        <% @restaurant.feature_pages.each do |page| -%>
          <li><%= link_to page.name, restaurant_feature_page_link(@restaurant, page) %></li>
        <% end -%>
      </ul>
    </div><!-- /restaurant_features -->
  <% end -%>
</header>

<% if editing? and can?(:edit, @restaurant) -%>
  <nav id="edit_resto_menu">
    <%= active_link_to 'Details', edit_restaurant_path(@restaurant),
        :class=> 'promo editor details' %>
    <%= active_link_to 'Features', restaurant_features_path(@restaurant),
        :class=> 'promo editor features' %>
    <%= active_link_to "Photos", bulk_edit_restaurant_photos_path(@restaurant),
        :class => 'promo editor photos' %>
    <%= active_link_to 'Fact Sheet', edit_restaurant_fact_sheet_path(@restaurant),
        :class => 'promo editor fact_sheet' %>
    <%= active_link_to "Menus", bulk_edit_restaurant_menus_path(@restaurant),
        :class => 'promo editor menus' %>
    <% if @restaurant.restaurant_features.any? %>
    <%= active_link_to 'Top Tags', edit_top_restaurant_features_path(@restaurant),
        :class=> 'promo editor tags' %>
    <% end %>
    <%= active_link_to 'Staff', bulk_edit_restaurant_employees_path(@restaurant),
        :class=> 'promo editor emp' %>
    <%= active_link_to "A La Minute", bulk_edit_restaurant_a_la_minute_answers_path(:restaurant_id => @restaurant),
        :class => 'promo editor alm' %>
    <%= active_link_to "Newsfeed", new_restaurant_promotion_path(:restaurant_id => @restaurant),
        :class => 'promo editor newsfeed' %>
  </nav>
<% end -%>
