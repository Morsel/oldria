<h1>All Users</h1>
<a href="#filter" class="showtarget">Filter</a>
<div id="filter">
<%= render :partial => 'searches/form' %>  
</div>

<table id="admin_users_list" cellspacing="0" width="637">
  <tr>
    <th></th>
    <th>Username</th>
    <th>Email</th>
    <!-- <th>Admin?</th> -->
    <th>Created on</th>
    <th>Confirmed on</th>
    <th>Last Used on</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr class="<%= user.admin? ? 'admin' : '' %>">
    <td class="thumb">
    <%- if user.avatar? -%>
      <%= image_tag user.avatar.url(:thumb), :class => 'thumbnail'  %>  
    <%- end -%>
    </td>
    <td><%=h user.username %></td>
    <td><%=h user.email %></td>
    <!-- <td><%= user.admin? ? '&#10003;' : '' %></td> -->

    <td>
      <%=h user.created_at.to_s(:long) %><br/>
      <small><%=h time_ago_in_words(user.created_at) %> ago</small>
    </td>

    <td>
    <% if user.confirmed? -%>
      <%=h user.confirmed_at.to_s(:long) %><br/>
      <small><%=h time_ago_in_words(user.confirmed_at) %> ago</small>
    <% end -%>
    </td>

    <td>
    <% if user.last_request_at -%>
      <%=h user.last_request_at.to_s(:long) %><br/>
      <small><%=h time_ago_in_words(user.last_request_at) %> ago</small>
    <% end -%>
    </td>

    <td class="utility">
      <%= link_to 'Show', admin_user_path(user) %>
      <%= link_to 'Edit', edit_admin_user_path(user) %>
      <%= link_to 'Destroy', admin_user_path(user), :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to 'Sign Up a New User', new_user_path, :class => 'button positive' %></p>