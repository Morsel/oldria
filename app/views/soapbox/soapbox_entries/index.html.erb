<% title "Front Burner - Soapbox", false %>
<%= render :partial => feature_entry_type(@main_feature), :locals => { :feature => @main_feature, :feature_comments => @main_feature_comments }%>

<%= render :partial => feature_entry_type(@secondary_feature), :locals => { :feature => @secondary_feature, :feature_comments => @secondary_feature_comments } if @secondary_feature.present? %>

<section id="recent-questions">
  <div id="recent-trends">
    <h1>Past Featured Trend Questions</h1>
    <ul id="recent-trends-feed">
        <% for trend_question in @featured_trend_questions %>
        <li>
            <% link_to soapbox_soapbox_entry_path(trend_question.soapbox_entry) do %>
                <% date = trend_question.soapbox_entry.published_at %>
                <time datetime="<%= date.try(:strftime,'%Y-%m-%d') %>"><span><%= date.try(:strftime, "%b").upcase %></span><%= date.try(:strftime, "%e") %></time>
                <span class="title"><%= trend_question.display_message || trend_question.subject %></span>
                <span class="reply-count"><span><%= count = trend_question.soapbox_comment_count %></span><%= count > 1 ? "replies" : "reply" %></span>
            <% end %>
        </li>
        <% end %>
      </ul>
    <p class="clear"><%= link_to 'Previous Featured Trend Questions &#187;', trend_soapbox_soapbox_entries_path, :class => :button %></p>
  </div><!-- /recent-trends -->

  <div id="recent-qotds">
    <h1>Past Featured Questions of the Day</h1>
    <ul id="recent-qotds-feed">
        <% for qotd in @featured_qotds %>
      <li>
          <% link_to soapbox_soapbox_entry_path(qotd.soapbox_entry) do %>
              <% date = qotd.soapbox_entry.published_at %>
              <time datetime="<%= date.try(:strftime,'%Y-%m-%d') %>"><span><%= date.try(:strftime, "%b").upcase %></span><%= date.try(:strftime, "%e") %></time>
              <span class="title"><%= qotd.display_message || qotd.message %></span>
              <span class="reply-count"><span><%= count = qotd.soapbox_comment_count %></span><%= count > 1 ? "replies" : "reply" %></span>
          <% end %>
      </li>
      <% end %>
    </ul>
    <p class="clear"><%= link_to 'Previous Featured Questions of the Day &#187;', qotd_soapbox_soapbox_entries_path, :class => :button %></p>
  </div><!-- /recent-trends -->
</section><!-- / recent-questions -->

<% content_for :sidebar do -%>
<%= render :partial => 'front_burner_sidebar' %>
<% end -%>