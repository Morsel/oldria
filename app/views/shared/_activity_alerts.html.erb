<div id="activity_alerts" class="activity_alerts sidebar_section">
  <div class="section_header"><h3 class="function-bold">Activity Alerts</h3></div>
  <div class="section_body">
    <ul class="fancy-list">

      <li><%= link_to pluralize(current_user.messages_from_ria.size, 'unread admin message'), ria_messages_path %></li>

    <%- unless  @current_user_restaurants.blank? -%>
      <li><%= link_to pluralize(current_user.discussions.unread_by(current_user).length, 'new discussion'), staff_discussions_messages_path %></li>

      <li><%= link_to pluralize(current_user.discussions.with_comments_unread_by(current_user).length, 'discussion') + ' with new comments', staff_discussions_messages_path %></li>
    <% end -%>

    </ul>
  </div>
</div>