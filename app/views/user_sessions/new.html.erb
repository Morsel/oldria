<% title "Login to SpoonFeed" %>
<p>Welcome to SpoonFeed. Please login.</p>
<% semantic_form_for @user_session do |f| %>
<%= f.error_messages %>
<% f.inputs do %>
	<%= f.input :username, :hint => 'You can use your <strong>username</strong> or <strong>email address.</strong>' %>
	<%= f.input :password %>
<p class="clear forgot"><small><%= link_to "Forgot your password?", new_password_reset_path %></small></p>
  <li>
    <label>Remember me?<%= f.check_box :remember_me %></label>
  </li>
<% end %>

<p><%= button_tag image_tag('key.png') + "Login", :name => 'submit' %></p>

<% end %>



