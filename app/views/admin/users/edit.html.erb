<h1>Editing user</h1>

<% form_for [:admin, @user] do |f| %>
  <%= f.error_messages %>

  <%- if @user.avatar? -%>
    <p><%= image_tag @user.avatar.url(:small) %></p>    
  <%- end -%>

  <p>
    <%= f.label :username %>
    <%= f.text_field :username, :class => 'text' %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'text' %>
  </p>
  <p>
    <%= f.label :james_beard_region_id %>
    <%= f.collection_select :james_beard_region_id, JamesBeardRegion.all, :id, :name_and_description %>
  </p>
  <p>
    <%= f.label :admin, "Admin?" %>
    <%= f.check_box :admin %>
  </p>
  <p>
    <%= f.label :account_type_id %>
    <%= f.collection_select :account_type_id, AccountType.all, :id, :name %>
  </p>
<p class="clear"><%= link_to 'Back', admin_users_path, :class=>'button' %></p>
  <p>
    <%= button_tag 'Update', :class => 'positive' %>
  </p>
<% end %>

