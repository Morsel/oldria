<section id="questions-list">
  <% unless @no_results  %>
    <% unless @questions_found.empty? %>
    <% end %>
    <% @answers_found.each do |answer| %>
      <% div_for answer do %>
        <div class="activity_header">
          <h3>Behind the Line</h3>
          <p class="comment_date"><%= answer.created_at.strftime("%m/%d") %></p>
          <p class="topic"><%= "#{answer.profile_question.chapter.title_with_topic}: #{answer.profile_question.title}" %> </p>
        </div>
        <div class="user_comment">
          <%= render :partial => 'users/identity', :locals => { :user => answer.user } %>
          <div class="user_comment"><%= truncate(answer.answer, :length => 200) %>
            <% if answer.answer.size > 200 -%><%= link_to "more &raquo;", profile_path(answer.user.username) %><%- end %></div>
        </div>
      <% end %>
    <% end %>
  <% end %>
  <%= will_paginate(@all_entries) %>
</section>
