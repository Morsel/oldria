<% title "Login to SpoonFeed" %>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username, :class => 'text' %>
    <small>Your username or email</small>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'text' %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>


<p><small><%= link_to "Forgot your password?", new_password_reset_path %></small></p>
