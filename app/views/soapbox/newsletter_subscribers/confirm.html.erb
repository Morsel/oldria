<% title "Confirming Your Email", false %>

<p>Confirmed! <%= @subscriber.email %> is now signed up for Soapbox.</p>

<% semantic_form_for [:soapbox, @subscriber] do |f| %>
    <% f.inputs do %>
        <%= f.input :receive_soapbox_news, :label => "Sign me up for the Soapbox email newsletter!" %>
    <% end %>
    <%= submit_tag "Confirm" %>
<% end %>