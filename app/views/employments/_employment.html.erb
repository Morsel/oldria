<% user = employment.employee %>
<% div_for user, :class => 'box clearfix' do %>
	<%= link_to image_tag(user.avatar.url(:thumb)), profile_path(user.username) %>
	<h3><%= user.name %></h3>
	<%= restaurant_role_and_link(employment) %>
	<% if !employment.subject_matters.blank? %>
		<p class="responsibilities">Handles <%= employment.subject_matters.map(&:name).to_sentence %></p>
	<% end %>
<% end -%>
