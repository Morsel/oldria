<% div_for(comment, :class => "column#{cycle(' clear','','',' last', :name => comment.commentable_type)}") do %>
<div class="identity">
  <span class="employee_name"><%= comment.user.name_or_username %></span>,
  <%= comment.employment.try(:restaurant_role).try(:name) %> at <%= comment.restaurant.try(:name) %> said:
</div>
<% if comment.user.avatar? %>
<div class="avatar">
  <%= image_tag(comment.user.avatar.url(:thumb)) %>
</div>
<% end %>
<div class="content">
  <%= simple_format (truncate(comment.comment, :length => 120)) %>
</div>
<% end %>
