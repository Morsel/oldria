<div id="ria_labs" class="ria_labs sidebar_section">
  <div class="section_header"><h3 class="function-bold">RIA Labs</h3></div>
  <div class="section_body">
      <% unless @current_user_restaurants.blank? -%>
        <h4>Try out the new restaurant calendar:</h4>
        <% @current_user_restaurants.each do |restaurant| %>
          <% div_for restaurant do %>
              <%= link_to h(restaurant.name), restaurant_calendars_path(:restaurant_id => restaurant) %>
          <% end -%>
        <% end -%>
      <% end -%>
      <div>
          <h4>Talk to other spoonfeed users:</h4>
          <p>
            <%= link_to image_tag('quotebubble.png') + "Start a conversation", new_conversation_path, :class => 'sf-button alt top' %>
          </p>
      </div>
  </div>
</div>