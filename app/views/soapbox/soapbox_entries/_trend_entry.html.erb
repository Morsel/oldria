<div class="share" id="trend">
  <!-- AddThis Button BEGIN -->
  <div class="addthis_toolbox">
    <a href="http://www.addthis.com/bookmark.php?v=250&amp;username=unpluggedria"
       class="addthis_button"
       addthis:url="<%= soapbox_soapbox_entry_url(feature.soapbox_entry) %>"
       addthis:title='Trend Identified'>Share</a>
  </div>
  <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#username=unpluggedria"></script>
  <!-- AddThis Button END -->
</div>
<section id="trend-identified">
  <header>
    <%= soapbox_tabby_title(feature) %>
  </header>
  <article id="trend-question">
    <div class="details">
      <time datetime="<%= feature.soapbox_entry.published_at.strftime('%Y-%m-%d') %>"><%= feature.soapbox_entry.published_at.try(:strftime, "%b %e, %Y") %></time>
      <h2><%= link_to message(feature), soapbox_soapbox_entry_path(feature.soapbox_entry) %></h2>
      <!-- Likes and Tweets BEGIN -->
      <a href="http://twitter.com/share?url=<%= URI.escape soapbox_soapbox_entry_url(feature.soapbox_entry) %>" class="twitter-share-button">Tweet</a>
      <iframe src="http://www.facebook.com/plugins/like.php?href=<%= URI.escape soapbox_soapbox_entry_url(feature.soapbox_entry) %>&amp;layout=button_count&amp;show_faces=false&amp;width=154&amp;action=like&amp;font=lucida+grande&amp;colorscheme=light&amp;height=auto" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:90px; height:20px;" allowTransparency="true"></iframe>
      <!-- Likes and Tweets END -->
    </div>
  </article>
  <% if feature_comments %>
  <section id="trend-comments">
      <%= render :partial => 'comment', :collection => feature_comments, :locals => { :full_text => false, :commentable_class => feature.class } %>
      <p class="clear"><%= link_to 'View more responses &#187;', soapbox_soapbox_entry_path(feature.soapbox_entry), :class => 'button' %></p>
  </section><!-- /trend-comments -->
  <% end %>
  
</section><!-- /trend-identified -->
