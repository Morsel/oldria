<% content_tag_for :li, cuisine do %>
    <%= cuisine.name %>&nbsp;
    <% if action_name != 'show' %>
      <%= link_to "Remove", 
        profile_cuisine_path(@user, @profile.profile_cuisines.find(:first, :conditions => { :cuisine_id => cuisine })), 
        { :method => :delete }, { :class => 'delete' } %>
    <% end %>
<% end %>
