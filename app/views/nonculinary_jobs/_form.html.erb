<% semantic_form_for [:my_profile, @nonculinary_job] do |f| %>
  <% f.inputs :class => "nonculinary_jobs" do %>
    <%= f.input :company, :input_html => {:class => 'title'} %>
    <%= f.input :title %>
    <%= f.input :city, :input_html => {:class => 'span-5'},
      :wrapper_html => {:class => 'span-5 column'} %>
    <%= f.input :state, :input_html => {:maxlength => 2, :class => 'span-1'},
      :wrapper_html => {:class => 'span-1 column last'} %>
    <%= f.input :country, :wrapper_html => {:class => 'clear'} %>
    <%= f.input :date_started, :start_year => (Date.today.year-60) %>
    <%= f.input :date_ended, :as => :date, :selected => nil,:start_year => (Date.today.year-60) %>
    <%= f.input :responsibilities, :label => "Responsibilities and Accomplishments",
      :input_html => {:rows => 3} %>
    <%= f.input :reason_for_leaving %>
  <% end %>
  <%= button_tag "Save" %>
<% end %>
