<% title @promotion_type.present? ? "Newsfeed: #{@promotion_type.name}" : "Newsfeed" %>

<% for promotion in @promotions -%>
<% div_for(promotion) do %>
    <% unless @promotion_type.present? -%>
    <h2><%= promotion.title %></h2>
    <% end -%>

    <!-- AddThis Button BEGIN -->
    <div class="addthis_toolbox">
        <script type="text/javascript">
        var addthis_share = {
            url: '<%= soapbox_promotions_url(:promotion_type_id => promotion.promotion_type_id, :anchor => "promotion_#{promotion.id}") %>',
            title: 'Newsfeed - <%= promotion.title %>'
        }
        </script>
        <a href="http://www.addthis.com/bookmark.php?v=250&amp;username=unpluggedria" class="addthis_button">Share</a>
    </div>
    <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#username=unpluggedria"></script>
    <!-- AddThis Button END -->

    <%= render :partial => 'restaurants/identity', :locals => { :restaurant => promotion.restaurant } %>
    <div>
        <p class="details"><%= promotion.details %></p>
        <p><%= link_to promotion.link %></p>
        <p><%= promotion.start_date.to_formatted_s(:long) %> <%= "- #{promotion.end_date.to_formatted_s(:long)}" if promotion.end_date.present? %> <%= "- #{promotion.date_description}" if promotion.date_description.present? %></p>
    </div>
    <div class="clear">&nbsp;</div>
<% end %>
<% end -%>
