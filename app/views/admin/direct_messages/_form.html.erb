<% form_for([:admin, @direct_message]) do |f| %>
<%= f.error_messages %>

<p>
	<%= f.label :receiver_id %>
	<%= f.collection_select :receiver_id, User.all, :id, :username %>
</p>

<p>
	<%= f.label :title %>
	<%= f.text_field :title, :class => 'title' %>
</p>
<p>
	<%= f.label :body %>
	<%= f.text_area :body, :class => 'text', :rows => '4' %>
</p>
<p>
	<%= link_to 'Back', admin_direct_messages_path, :class => 'button' %>
	<%= button_tag 'Send', :class => 'positive' %>
</p>
<% end %>