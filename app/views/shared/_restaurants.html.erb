<div id="my_restaurants" rel="My Restaurants" class="box">
	<h3 class="function-bold">Restaurants Managed</h3>
<% if @current_user_managed_restaurants.blank? %>

	<p>You don't manage any restaurants.</p>

<% else %>
<div class="my_restaurants">
	<% @current_user_managed_restaurants.reject(&:new_record?).each do |restaurant| %>
	<% div_for restaurant do %>
		<%= link_to h(restaurant.name), restaurant %>
		<span class="media_requests_count">
			<%= link_to "#{restaurant.media_requests.size} media requests", restaurant_media_requests_path(restaurant) if restaurant.media_requests.size > 0 %>
		</span>
	<% end -%>
	<% end %>
</div>
<% end %>

<% if false # Hide this %>
<p class="add_restaurant clearfix hidden">
	<%= link_to image_tag("plus.png") + "Sign up a restaurant", new_restaurant_path, :class => 'button positive' %>
</p>
<% end %>

<% unless @current_user_restaurants.blank? %>
<div class="my_employers">
	<h3 class="function-bold">Restaurant Associations</h3>

	<% @current_user_restaurants.each do |restaurant| %>
	<% div_for restaurant do %>
		<%= link_to h(restaurant.name), restaurant %>
	<% end -%>
	<% end %>
</div>
<% end %>

<p>
  <%= link_to image_tag('quotebubble.png') + "Start a discussion", new_discussion_path, :class => 'sf-button alt top' %>
</p>

</div>
