<% content_tag_for :li, cuisine do %>
    <%= cuisine.name %>&nbsp;
    <% if action_name != 'show' %>
      <%= link_to "Remove", 
        my_profile_profile_cuisine_path(@profile.profile_cuisines.find(:first, :conditions => { :cuisine_id => cuisine })), 
        :method => :delete, :class => 'delete' %>
    <% end %>
<% end %>
