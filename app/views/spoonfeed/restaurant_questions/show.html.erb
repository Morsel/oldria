<% title "#{@question.title} - Behind The Line", false %>

<h1 id="btl-title" class="btl"><span class="btl-art">Behind the Line</span></h1>
<h2 id="topic_title">Topic: <%= @question.chapter.topic.title %></h2>

<div id="btl_answers">
  <h3><%= @question.chapter.title %></h3>

  <h4><span class="letter-q">Q:</span> <%= @question.title %></h4>

  <% for answer in @answers %>
      <div class="comment">
          <%= render :partial => "restaurants/identity", :locals => { :restaurant => answer.restaurant } %>
          <div class="user_comment"><p><%= answer.answer %></p></div>
      </div>
      <p><span class="timestamp">Last updated: <%= answer.try(:updated_at).try(:strftime, "%b %e %Y") %></span> - <%= link_to "Share this entry", restaurant_restaurant_answer_path(answer.restaurant, answer) %></p>
  <% end %>

</div><!-- #btl_answers -->
