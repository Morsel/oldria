<% title "New Holiday Reminder" %>

<p>First search, then choose the recipients</p>
<% form_for @search, :url => new_admin_holiday_reminder_path, :html => {:class => 'formtastic faceted'} do |f| %>
  <%= hidden_field_tag :holiday_id, params[:holiday_id] %>
  <%= render :partial => 'media_requests/search_fields', :locals => {:f => f} %>
<% end %>

<% if params[:search] %>
  <%= render :partial => 'form' %>
<% end %>

<p><%= link_to "Back to All Messages", admin_messages_path %></p>
