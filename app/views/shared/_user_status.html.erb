<div id="user_status" class="box">

	<% if current_user -%>
	<%= link_to image_tag(current_user.avatar.url(:thumb), :class => 'thumbnail'),
	profile_path(current_user.username) %>

	<p>Logged in as <%= link_to current_user.username, profile_path(current_user.username) %></p>
	<p><%= link_to "Edit My Account", edit_user_path(current_user) %></p>
	<p><%= link_to "(Log out)", logout_path %></p>

	<%- else -%>

	<p>
		You are currently not logged in.<br/>
		<%= link_to "Login", login_path %> or <%= link_to "Sign Up", signup_path %>
	</p><br/>
	<h4>
		Media/Journalists, <%= link_to "Sign up here!", new_media_user_path %>
	</h4>
	<% end -%>

</div>
<% if current_user -%>
<%= render :partial => 'statuses/form' %>

	<div id="previous_statuses" class="box">
		<h3 class="function-bold">Previous Status Messages</h3>
			<ol class="statuses" id="sidebar_statuses">
				<%= render :partial => 'statuses/user_bar_status', :collection => current_user.statuses.all(:limit => 2) %>
			</ol>

			<% if current_user.statuses.size > 2 -%><p><%= link_to 'View all', user_statuses_path(current_user),:class=>'sf-button' %></p><% end -%>
	</div>

	<% unless (@coached_message ||= CoachedStatusUpdate.current.random.first).blank? %>
	<div id="coached">
		<h3 class="function-bold">Status Suggestions</h3>
		<%= simple_format @coached_message.message %>
	</div>
	<% end %>
<% end -%>