<% title "Restaurant Roles" %>

<p class="clearfix">
	<%= link_to "New Restaurant Role", new_admin_restaurant_role_path, :class => 'positive button' %>
</p>

<% table_for @restaurant_roles do |t| %>
    <% t.data :actions => [:edit, :destroy], :action_prefix => 'admin' do
        t.cell(:name)
        t.cell(:category) { |r| render :partial => "role_form", :locals => { :role => r } }
    end %>
<% end %>

<table>
	<tr>
		<th>Name</th>
		<th></th>
	</tr>
	<% for role in @restaurant_roles %>
	<tr>
		<td><%=h role.name %></td>
		<td class="utility">
			<%= link_to "Edit", edit_admin_restaurant_role_path(role) %>
			<%= link_to "Destroy", admin_restaurant_role_path(role), :confirm => 'Are you sure?', :method => :delete %>
		</td>
	</tr>
	<% end %>
</table>

