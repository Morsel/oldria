<li>
  <%= link_to soapbox_soapbox_entry_path(trend_list_entry.soapbox_entry) do %>
    <% date = trend_list_entry.scheduled_at %>
    <time datetime="<%= date.try(:strftime,'%Y-%m-%d') %>"><span><%= date.try(:strftime, "%b").upcase %></span><%= date.try(:strftime, "%e") %></time>
    <span class="title"><%= trend_list_entry.display_message || trend_list_entry.subject %></span>
    <span class="reply-count"><span><%= count = trend_list_entry.soapbox_comment_count %></span><%= count > 1 ? "replies" : "reply" %></span>
  <% end %>
</li>
