<% semantic_form_for [:admin, @user], :html => {:class => 'span-12'} do |f| %>
  <% f.inputs :name => 'Basic Information' do %>
    <%= f.input :first_name, :input_html => {:class => 'span-3'}, 
        :wrapper_html => {:class => 'span-3'} %>
    <%= f.input :last_name, :input_html => {:class => 'span-4'}, 
        :wrapper_html => {:class => 'span-4'} %>
    <%= f.input :email, :wrapper_html => {:class => 'clear'} %>
    <%= f.input :james_beard_region, :label => 'Region', 
        :wrapper_html => {:class => 'bottom'} %>
    <p>
      <%= link_to "Resend confirmation email", 
          resend_confirmation_users_path(:email => @user.email), 
          :method => "post" unless @user.confirmed? %>
    </p>
  <% end %>

  <% f.inputs :name => 'Account Permissions' do %>
    <div id="account_status">
      <% if !@user.new_record? %>
        <% if @user.complimentary_account? %>
          This user has a Complimentary Premium Account.
          <br clear="all"/>
          <br clear="all"/>
          <% link_to cancel_complimentary_admin_user_path(@user), 
              :class => 'button negative', :method => :post, 
              :confirm => "Are you sure you want to make this account basic?" do %>
            <%= image_tag('x.png') %>  
            Cancel the user's Complimentary Premium Account
          <% end %>
        <% elsif @user.premium_account %>
          This user has a Premium Account.
          <% link_to make_complimentary_admin_user_path(@user), 
              :class => 'button positive', :method => :post,
              :confirm => "Are you sure you want to make this account complimentary?" do %>
            <%= image_tag('tick.png') %>  
            Convert user's premium account to a Complimentary Premium Account
          <% end %>
          <br clear="all" />
          <% link_to cancel_complimentary_admin_user_path(@user), 
              :class => 'button negative', :method => :post, 
              :confirm => "Are you sure you want to make this account basic?" do %>
            <%= image_tag('x.png') %>  
            Downgrade the user to a Basic Account
          <% end %>
        <% else %>
          This user has a Basic Account.
          <br clear="all"/>
          <br clear="all"/>
          <% link_to make_complimentary_admin_user_path(@user), 
              :class => 'button positive', :method => :post,
              :confirm => "Are you sure you want to make this account complimentary?" do %>
            <%= image_tag('tick.png') %>  
            Give user a Complimentary Premium Account
          <% end %>
        <% end %>
      <% end %>
    </div>
    <br clear="all"/>
    <%= f.input :role, :as => :select, :label => 'Role',
        :collection => { "Media" => "media", "Admin" => "admin" } %>
    <%= f.input :publication, :label => "Affiliated Publication", 
        :hint => "This only matters for 'media' users." %>
  <% end %>

  <% f.inputs :name => 'Username/Password' do %>
    <%= f.input :username, :required => (action_name == 'new') %>
    <%= f.input :password, :as => :string, :label => "Password", 
        :required => (action_name == 'new') %>
    <%= f.input :password_confirmation, :as => :string, 
        :label => "Confirm password", :required => (action_name == 'new') %>
  <% end %>

	<p><%= button_tag "Save", :class => 'positive' %></p>
<% end %>