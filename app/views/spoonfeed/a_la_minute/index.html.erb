<% title "A la Minute" %>

<% for answer in @answers -%>
<% div_for answer do %>
    <h2><%= link_to answer.question, restaurant_path(answer.responder) %></h2>
    <%= render :partial => 'restaurants/identity', :locals => { :restaurant => answer.responder } %>
    <p class="answer"><%= answer.answer %></p>
    <p><span class="datestamp"><%= "Posted #{answer.created_at.strftime("%D")}" %></span> <!-- - <%#= link_to "Share this entry", restaurant_path(answer.responder) %> --></p>
    <div class="clearfix">&nbsp;</div>
<% end %>
<% end -%>

<%= will_paginate(@answers) %>
