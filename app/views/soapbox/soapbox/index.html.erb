<% title "Home", false %>
<section id="content" class="home">
    <div id="inside" class="home">

        <div id="quicklinks">
            <div id="alm-links">
                <h2>A la Minute</h2>
                <ul>
                    <% for link in @alm_links -%>
                    <li><%= link_to (link.topic || link.question), soapbox_a_la_minute_question_path(link) %></li>
                    <% end -%>
                </ul>
                <%= link_to "view more", soapbox_a_la_minute_questions_path, :class => "view-more" %>
            </div>
            <!-- <h2>Newsfeed</h2> -->
            <div id="btl-links">
                <h2>Behind the Line</h2>
                <ul>
                    <% for link in @btl_links -%>
                    <li><%= link_to link.title, soapbox_topic_path(link) %></li>
                    <% end -%>
                </ul>
                <%= link_to "view more", soapbox_topics_path, :class => "view-more" %>
            </div>
            <% if @travel_links.present? -%>
            <div id="travel-links">
                <h2>Travel Guide</h2>
                <ul>
                    <% for link in @travel_links -%>
                    <li><%= link_to link.title, chapter_soapbox_topics_path(:chapter_id => link.id) %></li>
                    <% end -%>
                </ul>
                <%= link_to "view more", soapbox_topic_path(Topic.travel), :class => "view-more" %>
            </div>
            <% end -%>
        </div>

        <div id="main-feeds">
            <div id="alm-feed" class="live-feed">
                <div id="alm-title" class="title">
                    <h2>A la Minute</h2>
                    <%= image_tag "soapbox/title-alm.png" %>
                    <%= link_to "+ See all", soapbox_a_la_minute_questions_path, :class => "link-all" %>
                </div>
                <% @alm_questions.each_with_index do |question, index| -%>
                <div class="a_la_minute_question" id="alm_<%= index %>">
                    <!-- AddThis Button BEGIN -->
                    <div class="addthis_toolbox">
                      <script type="text/javascript">
                          var addthis_share = {
                              url: '<%= soapbox_a_la_minute_question_path(question) %>',
                              title: 'A la Minute - <%= question.question %>'
                          }
                      </script>
                      <a href="http://www.addthis.com/bookmark.php?v=250&amp;username=unpluggedria" class="addthis_button">Share</a>
                    </div>
                    <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#username=unpluggedria"></script>
                    <!-- AddThis Button END -->

                    <h3><%= link_to question.question, soapbox_a_la_minute_question_path(question) %></h3>
                    <% if question.latest_answer.present? -%>
                    <div>
                        <%= render :partial => 'restaurants/identity', :locals => { :restaurant => question.latest_answer.responder } %>
                        <p class="answer"><%= question.latest_answer.answer %></p>
                        <p class="datestamp">Posted <%= question.latest_answer.created_at.strftime("%D") %></p>
                    </div>
                    <div class="clear">&nbsp;</div>
                    <% end -%>
                </div>
                <% end -%>
                <div class="links">
                    <% (1..4).each do |i| %>
                      <% if @alm_questions[i-1].present? -%>
                        <%= link_to_function i,
                            "$('.a_la_minute_question').hide(); $('#alm_#{i-1}').show(); $('.alm_link').removeClass(\"current\"); $('#alm_link_#{i}').addClass(\"current\")",
                            :class => (i == 1 ? "current alm_link" : "alm_link"),
                            :id => "alm_link_#{i}" %>
                      <% end -%>
                    <% end %>
                    <%= link_to "more", soapbox_a_la_minute_questions_path %>
                </div>
            </div>

            <div id="btl-feed" class="live-feed">
                <div id="btl-title" class="title">
                    <h2>Behind the Line</h2>
                    <%= image_tag "soapbox/title-btl.png" %>
                    <%= link_to "+ See all", soapbox_topics_path, :class => "link-all" %>
                </div>
                <% @btl_questions.each_with_index do |question, index| -%>
                <div class="profile_question" id="btl_<%= index %>">
                    <!-- AddThis Button BEGIN -->
                    <div class="addthis_toolbox">
                      <script type="text/javascript">
                          var addthis_share = {
                              url: '<%= soapbox_question_path(question) %>',
                              title: 'Behind the Line - <%= question.title %>'
                          }
                      </script>
                      <a href="http://www.addthis.com/bookmark.php?v=250&amp;username=unpluggedria" class="addthis_button">Share</a>
                    </div>
                    <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#username=unpluggedria"></script>
                    <!-- AddThis Button END -->
                    <h3>Topic: <%= question.topic.title %></h3>
                    <h4><%= link_to question.title, soapbox_question_path(question) %></h4>
                    <% if question.latest_answer.present? -%>
                    <div>
                        <%= render :partial => 'users/identity', :locals => { :user => question.latest_answer.user } %>
                        <p class="answer"><%= question.latest_answer.answer %></p>
                        <p class="datestamp">Posted <%= question.latest_answer.created_at.strftime("%D") %></p>
                    </div>
                    <div class="clear">&nbsp;</div>
                    <% end -%>
                </div>
                <% end -%>
                <div class="links">
                    <% (1..4).each do |i| %>
                      <% if @btl_questions[i-1].present? -%>
                        <%= link_to_function i,
                            "$('.profile_question').hide(); $('#btl_#{i-1}').show(); $('.btl_link').removeClass(\"current\"); $('#btl_link_#{i}').addClass(\"current\")",
                            :class => (i == 1 ? "current btl_link" : "btl_link"),
                            :id => "btl_link_#{i}" %>
                      <% end -%>
                    <% end %>
                    <%= link_to "more", soapbox_topics_path %>
                </div>
            </div>
            <!-- <div class="live-feed">
                <h2>Newsfeed</h2>
            </div> -->
        </div>
    </div><!-- /inside -->
</section><!-- /content --> 

