<% f.inputs :name => "Work Details" do %>
    <%= f.input :type, :as => :hidden %>
    <%= f.input :restaurant_role, :label => "Role", :as => :select, :collection => RestaurantRole.all %>
    <br />
    <%= f.input :solo_restaurant_name, :label => "Restaurant name", :hint => "Enter your restaurant name or your employment status (e.g., student, between jobs, retired, time off)." %>

    <h4>Area(s) of expertise</h4>
    <%= f.input :subject_matters,
      :as => :check_boxes,
      :wrapper_html => { :class => 'checkall', :id => "employment_general_subject_matters" },
      :collection => SubjectMatter.general.all,
      :label => "I am comfortable answering questions and speaking to the media about the following topics:" %>

    <%= f.input :post_to_soapbox, :as => :boolean, :label => " I want to receive Front Burner questions and have my answers published to the public Soapbox!", :selected => true %>
            
<% end %>
