<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title><%= h(yield(:title) || "") %> | Spoonfeed - Connecting Chefs, Publicists, and Media</title>
  <meta property="og:description" content="<%= h(yield(:fb_description) || "")  %>" />
  <meta name="author" content="Restaurant Intelligence Agency">

  <link rel="shortcut icon" href="/favicon.ico">

  <link href='http://fonts.googleapis.com/css?family=Voltaire' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag 'sf/reset.css', 'sf/style.css', 'colorbox' %>
  <%= stylesheet_link_tag '/redesign/_css/print', :media => 'print' %>
  <%= yield(:head) %>

  <%- if protect_against_forgery? -%>
  <script type='text/javascript'>
  //<![CDATA[
  window._auth_token_name = "<%= request_forgery_protection_token %>";
  window._auth_token = "<%= form_authenticity_token %>";
  //]]>
  </script>
  <%- end -%>

  <%= render :partial => 'layouts/ga' %>

  <%= javascript_include_tag 'modernizr-2.0.6.min.js' %>
  <%= javascript_include_tag 'jquery-form-min.js', 'jquery-colorbox-min.js', 'jquery-easing-min.js', 'jquery-cycle-min.js', 'jquery.equalheights', 'jquery.ui.tabs-customized', 'showy', 'jquery.masonry.js', :cache => true %>
  <%= javascript_include_tag 'spoonfeed' %>
</head>

