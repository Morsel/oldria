// Add the message the list
$("#statuses").prepend("<li class=\"status\" style=\"opacity:0\" id=\"status_<%= @status.id %>\"><%= escape_javascript(render @status) %></li>").find('li:first').animate({opacity: 1}, 1000);

// Reset the form
$("#new_status")[0].reset();

// Update the Flash message
$("#flashes").html('<div id="flash_notice" style="opacity:0"><%= escape_javascript(flash.delete(:notice)) %></div>');

$("#flash_notice").animate({opacity:1}, 'fast');

// Hide the Flash after 2 seconds
setTimeout(function(){
	$('#flash_notice:visible').not(":animated").fadeOut('slow');
}, 2000);