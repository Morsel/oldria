<% title "#{@user.username}'s profile" %>
<% if current_user == @user  %>
<p class="editprofile"><%= link_to "Edit Profile", edit_user_path(@user) %></p>
<% end -%>

<div id="user_profile_view" class="box clearfix">
	<%= image_tag @user.avatar.url(:small) %>
	<h2>blake0102</h2>
	<h3>Edward Blake</h3>
	<h3>Neoteric Design, Web Designer</h3>
	<ul class="user_profile_actions">
		<li><a href="#">Message this user</a></li>
		<li><a href="#">Follow this user</a></li>
	</ul>
	<h4>About Me:</h4>
	<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec ut ligula magna. Sed sed odio velit. Phasellus orci nunc, bibendum ut consectetur sit amet, tempus nec lacus. Integer congue vulputate lectus id feugiat. Class aptent taciti sociosqu ad litora torquent per conubia nostra</p>
	 

	<% unless current_user == @user %>
		<p class="clearfix">
			<%= link_to "send a message", new_user_direct_message_path(@user), :class => 'button'%>
			<%= link_to "follow this user", followings_path(:friend_id => @user), :method => :post, :class => 'button positive'%>
		</p>
	<% end -%>
	
</div><!--#user_profile_view -->

<div id="user_content">
<% if @latest_status %>
<h3>Latest Status</h3>
<div class="box rounded">
<p class="status" id="status_<%= @latest_status.id %>">
	<%= render :partial => 'statuses/status', :locals => { :status => @latest_status } %>
</p>
<p class="status" id="status_<%= @latest_status.id %>">
	<%= render :partial => 'statuses/status', :locals => { :status => @latest_status } %>
</p>
<p class="status" id="status_<%= @latest_status.id %>">
	<%= render :partial => 'statuses/status', :locals => { :status => @latest_status } %>
</p>
<p class="more_statuses"><%= link_to "More statuses", user_statuses_path(@user) %></p>
<% end %>
</div>
<% if !@user.followings.blank? %>
<h3>Following</h3>
<div class="box rounded clearfix">
<ul>
	<% for following in @user.followings %>
	<li>
		<%= image_tag @user.avatar.url(:thumb) %>
		<h4><%= following.friend.name %></h4>
		<p><%= link_to "unfollow this user", following, :method => :delete if current_user == @user %></p>
	</li>
	<% end %>
</ul>
<% end %>
</div>

<% if !@user.followers.blank? %>
<h3>Followers</h3>
<div class="box rounded">
<ul>
	<% for follower in @user.followers %>
	<li>
		<%= image_tag follower.avatar.url(:thumb) %>
		<%= follower.name %>
	</li>
	<% end %>
</ul>
</div>
<% end %>
</div><!--#user_content-->
