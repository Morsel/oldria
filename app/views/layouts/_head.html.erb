<!doctype html>
<html lang="en" class="no-js">
<head>
  <meta charset="utf-8">
  <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <title><%= h(yield(:title) || "") %> <%= current_user && current_user.media? ? "MediaFeed" : " :: Spoonfeed" %> :: Restaurant Intelligence Agency</title>

  <meta property="og:description" content="<%= h(yield(:fb_description) || "")  %>" />
  <meta name="author" content="Restaurant Intelligence Agency">
  <link rel="shortcut icon" href="/favicon.ico">
  <%= stylesheet_link_tag 'colorbox', '/redesign/brandonbold/stylesheet', '/redesign/hoeflerbolditalic/stylesheet', '/redesign/_css/spoonfeed' %>
  <%= stylesheet_link_tag '/redesign/_css/print', :media => 'print' %>
  <%= yield(:head) %>

  <%- if protect_against_forgery? -%>
  <script type='text/javascript'>
  //<![CDATA[
  window._auth_token_name = "<%= request_forgery_protection_token %>";
  window._auth_token = "<%= form_authenticity_token %>";
  //]]>
  </script>
  <%- end -%>

  <%= render :partial => 'layouts/ga' %>
  
  <script type="text/javascript">
  var googlejsapiHost = ("https:" == document.location.protocol) ? "https://www.google.com" : "http://www.google.com";
  document.write(unescape("%3Cscript src='" + googlejsapiHost + "/jsapi' type='text/javascript'%3E%3C/script%3E"))
  </script>

  <script>
    google.load('jquery','1.4.2');
    google.load('jqueryui','1.8.5');
  </script>
  
  <%= javascript_include_tag 'jquery-form-min.js', 'jquery-colorbox-min.js', 'jquery-easing-min.js', 'jquery-cycle-min.js', 'jquery.equalheights', 'jquery.ui.tabs-customized', 'showy', 'jquery.masonry.js' %>

</head>

