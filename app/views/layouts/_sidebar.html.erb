<% if display_sidebar? -%>
	<div id="sidebar_b">
	  <% if current_user -%>
		  <div id="sidebar_content">
		  
  		  <%= yield :sidebar %>
			
			<% if current_user && current_user.admin? %>
          <%= link_to "Go to Admin", admin_root_path, :class => "promo go_to_admin" %>
      <% end %>
			
			<%= link_to "Send an Invitation", new_invitation_path, :id => "invitation", :class => "promo" %>
			
			<% if current_user && current_user.btl_enabled? %>
  			<aside class="promo" id="btl_game">
  				<a href="#" class="new_question">new question</a>
  				<h1>Behind the Line</h1>
  				<h2><%= @question.topic.title %></h2>
  				<p><%= @question.chapter.title %></p>
  				<h3><%= @question.title %></h3>
  				<% form_for @question.find_or_build_answer_for(current_user) do |f| %>
  				    <%= f.hidden_field :profile_question_id %>
  				    <%= f.text_area :answer %>
    				<button>Post</button>
  				<% end %>
  				<p class="disclaimer">Your answers are viewable on your public profile</p>
  			</aside><!--#btl_game-->
      <% end %>

  			<aside class="promo" id="manuals">

  				<%= link_to "Marketing Manual", public_page_path('introduction-marketing-workbook'), :id => 'marketing_manual' %>
  				<p>Built to answer your marketing questions.  It's in progress: tell us what you need, and we'll cover it.</p>

  				<%= link_to "Help / Questions?", public_page_path('help-marketing-workbook'), :id => 'help_questions' %>
  				<p>We're building this for you, so don't be shyâ€”ask us questions and give us suggestions!</p>

  			</aside><!--.promo-->
								
  			<%- if current_user && !current_user.media? %>
          <%# disabling the ria labs for now: render :partial => 'shared/ria_labs' %>
        <% end -%>
  		</div><!-- #sidebar_content-->
  	<% else -%>
  	  &nbsp;
  	<% end -%>
	</div><!--#sidebar_b-->
<% end -%>