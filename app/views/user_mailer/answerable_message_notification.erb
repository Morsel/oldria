<% title = @message.email_title -%>
<%= render :partial => 'email_header' %>
<h3 id="messagetype" style="color: #cc6632; font-size: 16px; font-weight: bold; letter-spacing: 2px; line-height: 14px; margin: 0 0 13px; text-transform: uppercase; text-align: center;">Respond by replying to this email</h2>
<h1 id="salutation" style="font-size: 20px; line-height: 26px; margin: 20px 0;">Hi <%= @recipient.first_name %>,</h1>

<p id="messagemessage" style="font-size: 14px;">
      <img src="http://spoonfeed.restaurantintelligenceagency.com/images/bubble_large.png" align="left" alt="" style="margin-bottom:30px;margin-right:10px;float:left">
</p>

<p id="messagebody">
  <%= @message.email_body %>
</p>
  
<p id="messagelink" style="clear: both; font-size: 14px;">
  <% if title == "Announcement" -%>
    <%= link_to "Read the Announcement &#187;", require_login_url, :style => "color: #cc6632; font-weight: bold; text-decoration: none;" %>
  <% else -%>
    <a href="<%= @message.respond_to?(:admin_message) ? admin_conversation_url(@message) : polymorphic_url(@message) %>" style="color: #bbb; font-weight: normal; text-decoration: none;">View this <%= title %> on Spoonfeed &#187;</a>
  <% end -%>
</p>
<%= render :partial => 'email_footer' %>
