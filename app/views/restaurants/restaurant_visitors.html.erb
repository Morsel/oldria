<%= title "Restaurant Visitors :: #{@restaurant.name}", false %>

<div id="restaurant_profile_view" class="edit clear clearfix">
    <%= render 'restaurants/restaurant_editing_header' %>

    <div id="editing_restaurant">
        <div id="restaurant_pages" class="clearfix">
           <div id="restaurant_features_content" style="width:700px;">
              <h1 class="pg_title">Visitors</h1>
                <div class="editing clearfix clear">
                    <table style="width: 100%" class="archives">
                        <tbody>
                          <%unless @visitors.blank?%>
                            <% @visitors.each do |visitor| %>
                            <tr>
                               <td width="15%">
                                <%= link_to((image_tag visitor.user.avatar.url(:thumb) ,:alt => visitor.user.try(:name) ,:class => 'alignleft'),soapbox_profile_path(visitor.user.username)) %>        
                              </td>
                              <td width="85%">
                                <div class="left"> <%= link_to visitor.user.name,soapbox_profile_path(visitor.user.username),:style=>"padding-top:0px" if visitor.user.present? %> 
                                </div>
                                 <div class="left"> has visited <%=visitor.visitor_count >1 ? "#{visitor.visitor_count} times" : "#{visitor.visitor_count} time" %>. Last visited at  <%=visitor.updated_at.to_formatted_s(:long)%></div>
                              </td>
                            </tr>
                           <% end %>
                          <%else%>
                           <tr>
                             <td>There is no visitors! </td>
                          </tr>
                          <% end %>
                        </tbody>
                    </table>
                </div>
            <!-- </div> -->
          </div>
        </div>
    </div><!-- /editing_restaurant -->
</div><!-- /restaurant_profile_view -->