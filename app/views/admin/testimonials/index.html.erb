<% title "Testimonials" %>

<%= link_to "New Testimonial", new_admin_testimonial_path, :class => "button positive" %>

<% table_for(@testimonials) do |t| %>
    <% t.data :actions => [:edit, :destroy], :action_prefix => 'admin' do
	    t.cell(:handle, :heading => '', :cell_html => {:class => 'small handle'}) { "[drag]" }
	    t.cell(:photo) { |c| image_tag c.photo.url(:small) }
        t.cell(:quote)
        t.cell(:person)
        t.cell(:page)
	end %>
<% end %>