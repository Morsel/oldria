<% title "Content Requests (Questions from Oz)" %>

<p><%= link_to (image_tag("plus.png") +"New Content Request (Question from Oz)"), new_admin_content_request_path, :class => 'positive button' %></p>

<% table_for(@content_requests) do |t| %>
  <% t.data :actions => :all, :action_prefix => 'admin' do
       t.cell(:subject)
       t.cell(:body)
       t.cell(:criteria) {|cr| cr.employment_search.readable_conditions.join(", ") }
       t.cell :reply_count, :heading => '', :cell_html => {:class => 'actions'} do |cr|
         reply_count_link(cr)
       end
    end %>
<% end %>

