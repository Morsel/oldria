<% semantic_form_for [@restaurant, @menu_item], :html => {:multipart => true} do |f| %>
    <% f.inputs do %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :photo, :hint => "Large, high-resolution photos can take a little while to upload, so please be patient" %>
        <%= f.input :otm_keywords, :as => "check_boxes", :collection => OtmKeyword.all(:order => "category"), :label => "Keywords" %>
    <% end %>

    <%= submit_tag "Save" %>
<% end %>
