<h1 class="pg_title">My Restaurants</h1>
<div id="my_restaurants" rel="My Restaurants" class="sibebar_section restaurants clearfix">
  <h1>My Restaurants</h1>
  <div class="employers">
  	<% if current_user.employments.blank? -%>
    	<p class="none">You aren't associated with any restaurants.</p>
		<% else %>
			<ul>
				<% current_user.employments.each do |employment| %>
					<li class="<%= dom_class(employment.restaurant) %>">
						<%= link_to h(employment.restaurant_name), employment.restaurant %>
						<% if employment.omniscient? %><span>(Admin)</span><% end %>
					</li>
				<% end %>
			</ul>
      <p class="start_discussion"><%= link_to "Start a discussion", new_discussion_path %></p>
		<% end %>
  </div>
</div><!-- #my_restaurants -->
