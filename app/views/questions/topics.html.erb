<% title "Behind the Line", false %>

<!-- AddThis Button BEGIN -->
<div class="addthis_toolbox">
  <a href="http://www.addthis.com/bookmark.php?v=250&username=unpluggedria" class="addthis_button">Share</a>
</div>
<script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#username=unpluggedria"></script>
<!-- AddThis Button END -->

<h1 id="btl-title" class="btl"><span class="btl-art">Behind the Line:</span> <span class="name"><%= btl_title_for(@subject) %></span></h1>
<h2 id="topic_title">Topics</h2>
<% javascript_tag do %>
  var addthis_share = {
    url: '<%= topics_soapbox_user_questions_url(@user) %>'
  }
<% end %>
<%= render :partial => 'shared/add_this', :locals => {:user => @user} %>

<%- @topics.each do |topic| -%>
<div class="topic <%= cycle '',' last' %>" id="<%= dom_id topic %>">
    <h3><%= topic.title %></h3>
    <table>
        <% @chapters_by_topic[topic].each do |chapter| %>
        <tr>
           <td class="topic_link"><%= link_to chapter.title, link_for_questions(:subject => @subject, :chapter_id => chapter.id) %></td>
           <td class="topic_completeness"><%= completion_percentage_for(@subject, chapter) %>% complete</td>
        </tr>
        <% end if @chapters_by_topic[topic] %>
    </table>
    <%= link_to "View all \"#{topic.title}\" chapters &raquo;", link_for_chapter(:subject => @subject, :topic_id => topic.id), :class => 'view_all_chapters' %>
</div>
<%- end -%>
