<% if owner? %>
  <span class="utility"><%= link_to image_tag('trash.gif'), status, :class => 'trash' %></span>
<% end %>
<span class="message"><%= auto_link status.message %></span>

<span class="posted">
  posted <%= time_ago_in_words status.created_at %> ago
  <%- if status.twitter_id -%>
    and on Twitter
  <% end -%>
  <%- if status.facebook_id -%>
    and on Facebook
  <% end -%>
</span>