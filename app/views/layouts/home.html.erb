<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Spoonfeed - Connecting Chefs, Publicists, and Media</title>
  <meta name="description" content="Restaurant Intelligence Agency website">
  <meta name="author" content="Restaurant Intelligence Agency">

  <link rel="shortcut icon" href="/favicon.ico">

  <link href='http://fonts.googleapis.com/css?family=Voltaire' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag 'sf_home/reset.css', 'sf_home/style.css' %>

  <%= javascript_include_tag 'modernizr-2.0.6.min.js' %>
</head>

<body class="home">
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) {return;}
  js = d.createElement(s); js.id = id;
