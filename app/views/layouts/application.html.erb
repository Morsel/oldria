<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <title><%= h(yield(:title) || "Untitled") %></title>
  <%= stylesheet_link_tag 'reset-fonts','gt-styles' %>
	<link rel="stylesheet" href="/stylesheets/application.css" type="text/css" media="screen" charset="utf-8" />
  
  <%= yield(:head) %>

<%- if protect_against_forgery? -%>
    <script type='text/javascript'>
    //<![CDATA[
      window._auth_token_name = "<%= request_forgery_protection_token %>";
      window._auth_token = "<%= form_authenticity_token %>";
    //]]>
    </script>
<%- end -%>

</head>
<body>

  <div class="gt-hd clearfix">
    <div class="gt-logo">
      SpoonFeed
    </div>

    <div id="user_nav">
      <% if current_user -%>
      <%= link_to "Log out", logout_path %>
      <% else -%>
      <%= link_to "Sign Up", signup_path %> 
      <%= link_to "Login", login_path %> 
      <% end -%>
    </div>


    <div class="gt-nav">
      <ul>
        <%- if current_user -%>

        <li><%= link_to "Log out", logout_path %></li>
        <li><%= link_to "Statuses", user_statuses_path(current_user) %></li>

          <% if current_user.twitter_authorized? -%>
        <li><%= link_to "Twitter Timeline", friend_timeline_path %></li>
          <% else -%>
        <li><%= link_to "Setup Twitter", new_twitter_authorization_url %></li>
          <% end -%>
        <li><%= link_to "Coached Status Updates", coached_status_updates_path %></li>
        <li><%= link_to "Seasons and Holidays", date_ranges_path %></li>
        <%- else -%>

        <li><%= link_to "Sign Up", signup_path %> </li>
        <li><%= link_to "Login", login_path %></li>

        <%- end -%>
      </ul>
    </div><!--.gt-nav-->
  </div><!--.gt-hd -->


  <div class="gt-bd gt-cols clearfix">
    <div class="gt-content">
	<div id="flashes">
      <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
	</div>

      <%- if show_title? -%>
      <h1><%=h yield(:title) %></h1>
      <%- end -%>

      <%= yield %>


    </div><!-- .gt-content-->
    <div class="gt-sidebar">
      <% if !(sb = yield :sidebar).blank? %>
        <%= sb %>
      <% end -%>
    </div><!--.ht-sidebar-->
  </div><!--.gt-bd gt-cols -->

  <div class="gt-footer">
    <p>SpoonFeed footer.</p>
  </div>
  <%= javascript_include_tag :defaults %>
</body>
</html>
