<% title "New user" %>

<% semantic_form_for [:admin, @user], :html => {:class => 'span-12'} do |f| %>
<% f.inputs :name => 'Basic Information' do %>
	<%= f.input :first_name, :input_html => {:class => 'span-3'}, :wrapper_html => {:class => 'span-3'} %>
	<%= f.input :last_name, :input_html => {:class => 'span-4'}, :wrapper_html => {:class => 'span-4'} %>
	<%= f.input :email, :wrapper_html => {:class => 'clear'} %>
	<%= f.input :james_beard_region, :label => 'Region', :wrapper_html => {:class => 'bottom'} %>
	<% unless action_name == 'edit' %>
		<%= f.input :account_type %>
	<% end -%>
<% end %>

<% f.inputs :name => 'Login Information' do %>
	<%= f.input :username %>
	<%= f.input :password, :as => :string, :label => "Initial password" %>
	<%= f.input :password_confirmation, :as => :string, :label => "Confirm initial password" %>
<% end %>

	<p><%= button_tag "Save", :class => 'positive' %></p>
	<p><%= link_to 'Back to All Users', admin_users_path %></p>
<% end %>

