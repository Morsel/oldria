<% javascript 'ckeditor/ckeditor' %>
<%= javascript 'jquery', 'nested_form' %>
<% title "New Menu :: #{@restaurant.name}", false %>
<div id="restaurant_profile_view" class="edit clear clearfix">
  <%= render 'restaurants/restaurant_editing_header' %>
  <div id="editing_restaurant">
    <div id="menu_items_header">
      <h2>New Menu - Edit New Menu</h2>
    </div>
    <%= render :partial => "form" %>
    
    <div id="new_carte_category_header" class="clear clearfix">
   	 <hr/><h2>New Menu - Add or Edit Category</h2>
   	 <%=link_to "Add or Edit a category", new_category_path(:carte_id=>@carte.id) %>
  	</div>

  	<div id="new_carte_sub_category_header" class="clear clearfix">
   	 <hr/><h2>New Menu - Add or Edit Sub Category</h2>
   	 <%=link_to "Add or Edit a sub category", new_category_path(:carte_id=>@carte.id,:sub_category=>"sub")%>
  	</div>
  
  </div>
