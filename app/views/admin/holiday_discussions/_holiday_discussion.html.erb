<tr class="holiday_discussion_recipient <%= cycle('odd', 'even', :name => 'discussion_row') %><%= holiday_discussion.accepted? ? ' accepted' : ' unaccepted' %>">
  <td>
    <%= holiday_discussion.restaurant.try(:name) %>
  </td>

  <%- if holiday_discussion.comments_count > 0 -%>
  <td>
    <%= link_to pluralize(holiday_discussion.comments_count, "comment"), holiday_discussion %>
  </td>
  <%- end -%>
</tr>
