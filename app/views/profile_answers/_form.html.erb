<fieldset class="plain">
<ol>
    <li class="hidden optional"><%= hidden_field_tag :profile_question_id, answer.profile_question.id %></li>
    <li class="text required">
        <%= text_area_tag "profile_question[#{answer.profile_question.id}]answer", answer.answer,
            :rows => 20, :cols => 50, :id => "profile_question_#{answer.profile_question.id}_answer" %>
        <p class="inline-hints"><%= answer.new_record? ? "" : "This answer is viewable by others" %></p>
    </li>
</fieldset>

<div class="clearfix">
  <%= button_tag "Post" %>
  <%= link_to "Delete this answer", send("#{@subject.class.name.downcase}_profile_answer_path", "#{@subject.class.name.downcase}_id".to_sym => @subject, :id => answer.id), :method => "delete", :class => "button negative" unless answer.new_record? %>
</div>
