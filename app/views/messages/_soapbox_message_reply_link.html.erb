<div class="clearfix" style="padding: .5em 0">
    <% if message.comments_count == 0 %>
      <%= link_to 'Post', link_for_message(message), :class => 'button utility round' %>
    <% else %>
      <%= link_to 'View your post', link_for_message(message), :class => 'button utility round' %>
    <% end %>
    &nbsp;&nbsp;for <%= restaurant(message).name %>
</div>