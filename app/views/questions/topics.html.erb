<% title "Behind the Line", false %>
<h1 id="btl-title" class="btl"><span class="btl-art">Behind the Line:</span> <span class="name"><%= @user.name %></span></h1>

<div class="share">
    <%= render 'users/add_this' %>
</div>


<h2 id="topic_title">Topics</h2>
<%- for topic in @topics -%>
<div class="topic <%= cycle '',' last' %>" id="<%= dom_id topic %>">
    <h3><%= topic.title %></h3>
    <table>
        <% for chapter in @chapters_by_topic[topic] %>
        <tr>
           <td class="topic_link"><%= link_to chapter.title, link_for_questions(:user_id => @user.id, :chapter_id => chapter.id) %></td>
           <td class="topic_completeness"><%= chapter.completion_percentage(@user) %>% complete</td> 
        </tr>
        <% end %>
    </table>
    <%= link_to "View all \"#{topic.title}\" chapters &raquo;", link_for_chapter(:user_id => @user.id, :topic_id => topic.id), :class => 'view_all_chapters' %>
</div>
<%- end -%>
