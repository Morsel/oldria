<% if subscriber.account_in_overtime? %>
  <div id="overtime">
    You can modify your premium account again after the current
    subscription expires.
  </div>
<% else %>
  <div id="upgrade_link">
    <% if subscriber.premium_account? %>
      <%= link_to "Update billing information",
          edit_subscription_path(subscriber),
          :class => 'sf-button' %>

          <%= link_to "View billing history", billing_history_subscription_path(subscriber), :class => 'sf-button' %>

          <%= link_to "Downgrade to basic",
              subscription_path(subscriber),
              :method => :delete,
              :confirm => "Do you really want to cancel your premium subscription?", 
              :class => 'sf-button' %>
    <% else %>
      <%= link_to "Upgrade to Premium", new_subscription_path(subscriber), :class => 'sf-button' %>
    <% end %>
  </div>
<% end %>