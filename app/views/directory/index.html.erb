<% title "Profiles" %>

<%= title_for_search %>

<% if @use_search %>
<div id="directory_search">
    <% semantic_form_for EmploymentSearch.new, :url => employment_search_path do |f| %>
        <%= render :partial => 'shared/employment_criteria', :locals => { :f => f, :hide_subject_matter => true } %>
    <% end %>
</div>
<% end %>

<div id="directory_list">
    <%= render :partial => 'directory/search_results' %>
</div>

