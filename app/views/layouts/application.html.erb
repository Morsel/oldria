<%= render 'layouts/head' %>
<%= render 'layouts/staging_bar' %>
<div id="container">
  <header id="site_header">
    <%= render 'layouts/logo' %>
    <div class="header_right">
      <%= render 'layouts/search' %>				
      <%= render 'layouts/userbox' %>
      <%= render 'layouts/top_promo' %>
    </div><!-- .header_right -->
  </header>
  <div id="main">
    <%= render 'layouts/nav_logic' %>
    <div id="content">
        <div id="page_content">
            <%= render 'layouts/flashes' %>
            <%- if show_title? -%>
            <h1 class="pg_title"><%=h yield(:title) %></h1>
            <%- end -%>
            <%= yield %>
        </div><!--#page_content-->
    </div><!--#content-->
    <%= render 'layouts/sidebar' %>
    <div class="clear"></div>
</div><!-- #main -->
<%= render 'layouts/footer' %>
