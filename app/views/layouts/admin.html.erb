<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <title><%= h(yield(:title) || "Admin Interface") %></title>
  <%= stylesheet_link_tag 'reset-fonts','gt-styles' %>
	<link rel="stylesheet" href="/stylesheets/application.css" type="text/css" media="screen" charset="utf-8" />
  <style type="text/css" media="screen">
  <!--
    body { background-color: #eee; }
    .gt-hd { background-color: #123456;}
  -->
  </style>
  <%= yield(:head) %>

<%- if protect_against_forgery? -%>
    <script type='text/javascript'>
    //<![CDATA[
      window._auth_token_name = "<%= request_forgery_protection_token %>";
      window._auth_token = "<%= form_authenticity_token %>";
    //]]>
    </script>
<%- end -%>

</head>
<body>

  <div class="gt-hd clearfix">
    <div class="gt-logo">
      SpoonFeed ADMIN
    </div>

    <div id="user_nav">
      Logged in as <%= current_user.username %> | 
      <%= link_to "Log out", logout_path %> |
      <%= link_to "Public", root_path %>
    </div>


    <div class="gt-nav">
      <ul>
        <li><%= link_to "Users", admin_users_path %></li>
        <li><%= link_to "Account Types", admin_account_types_path %></li>
        <li><%= link_to "Coached Status Updates", admin_coached_status_updates_path %></li>
        <li><%= link_to "Seasons and Holidays", admin_date_ranges_path %></li>
      </ul>
    </div><!--.gt-nav-->
  </div><!--.gt-hd -->


  <div class="gt-bd gt-cols clearfix">
    <div class="gt-content">
	<div id="flashes">
      <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
	</div>

      <%- if show_title? -%>
      <h1><%=h yield(:title) %></h1>
      <%- end -%>

      <%= yield %>


    </div><!-- .gt-content-->
    <div class="gt-sidebar">
      <% if !(sb = yield :sidebar).blank? %>
        <%= sb %>
      <% end -%>
    </div><!--.ht-sidebar-->
  </div><!--.gt-bd gt-cols -->

  <div class="gt-footer">
    <p>SpoonFeed footer.</p>
  </div>
  <%= javascript_include_tag :defaults %>
</body>
</html>
