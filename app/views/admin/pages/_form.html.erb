<% semantic_form_for [:admin, @page] do |f| %>
	<% f.inputs do %>
		<%= f.input :title,
                :input_html => {:class => 'title span-8'} %>
		<%= f.input :slug unless @page.special? %>
		<%= f.cktext_area :content, :swf_params=>{:assetable_type=>'User', :assetable_id=>current_user.id} %>
	<% end %>

	<p>
		<%= button_tag (image_tag("tick.png")+"Save"), :class => 'positive' %>
	</p>
<% end %>
