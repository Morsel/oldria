<% restaurant = user %>
<div class="identity<% unless user.logo && user.logo.attachment? -%> no_avatar<% end -%>">
    <div class="avatar">
      <% if restaurant.logo && restaurant.logo.attachment? -%>
        <%= image_tag(restaurant.logo.attachment.url(:thumb), :width => 50, :height => 50) %>
      <% end -%>
    </div>
  <ul class="identity_details restaurant">
    <li class="employee_name primary">
        <%= link_to_if (user.linkable_profile? || logged_in_and_not_soapbox), restaurant.name, restaurant_path(restaurant) %>
    </li>
  </ul>
</div>
