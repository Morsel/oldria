<% title "Spoonfeed Promos" %>

<%= link_to "New Promo", new_admin_sf_promo_path, :class => "button positive" %>

<%= table_for(@promos) do |t| %>
    <% t.data :actions => [:edit, :destroy], :action_prefix => 'admin' do
	    t.cell(:handle, :heading => '', :cell_html => {:class => 'small handle'}) { "[drag]" }
        t.cell(:title)
        t.cell(:body)
        t.cell(:link)
	end %>
<% end %>