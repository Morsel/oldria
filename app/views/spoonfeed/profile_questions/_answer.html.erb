<div class="user_answer">
    <%= render :partial => "users/identity", :locals => { :user => answer.user } if answer.user %>
    <div class="comment">
        <%= truncate(answer.answer, :length => 200) %>
        <% if answer.answer.size > 200 -%>
        <%= link_to "more &raquo;", profile_question_path(answer.profile_question) %>
        <% end -%>
    </div>
	<p><span class="timestamp">Last updated: <%= answer.updated_at.strftime("%b %e %Y") %></span></p>
</div>
