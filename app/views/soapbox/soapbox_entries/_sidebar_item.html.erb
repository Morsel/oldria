<li>
  <time class="feed-item-date" datetime="<%= sidebar_item.scheduled_at.strftime('%Y-%m-%d') %>"><%= sidebar_item.scheduled_at.strftime("%m/%d") %>:</time>
  <header class="feed-item-title">
      <%= sidebar_item.soapbox_entry.present? ? link_to(message(sidebar_item), soapbox_soapbox_entry_path(sidebar_item.soapbox_entry)) : message(sidebar_item) %>
  </header>
  <aside class="feed-item-reply-count">
      <% if sidebar_item.soapbox_entry.present? -%>
      <%= link_to soapbox_soapbox_entry_path(sidebar_item.soapbox_entry) do %>
      <span class="num"><%= count = sidebar_item.soapbox_comment_count %></span> <%= count != 1 ? "replies" : "reply" %>
      <% end %>
      <% end -%>
  </aside>
</li>