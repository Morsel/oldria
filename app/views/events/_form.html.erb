<% semantic_form_for [restaurant, event] do |f| %>
    <% f.inputs do %>
        <%= f.input :category, :as => "select", :label => "Calendar", :collection => Event::CATEGORIES %>
        <%= f.input :title %>
        <%= f.input :start_at, :label => "Start Date" %>
        <%= f.input :end_at, :label => "End Date" %>
        <%= f.input :status, :as => 'select', :collection => Event::STATUSES %>
        <%= f.input :location %>
        <%= f.input :description %>
    <% end %>
    
    <p>
      <%= button_tag "Save", :name => 'submit' %>
    </p>
<% end %>