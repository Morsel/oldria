<% title "Home", false %>
<section id="content" class="home">
    <div id="inside" class="home">
        <div id="quicklinks">
            <div id="alm-links">
                <h2>A la Minute</h2>
                <ul>
                    <% for link in @alm_links -%>
                    <li><%= link_to (link.topic || link.question), soapbox_a_la_minute_question_path(link) %></li>
                    <% end -%>
                    <%= link_to "View more", soapbox_a_la_minute_questions_path %>
                </ul>
            </div>
            <!-- <h2>Newsfeed</h2> -->
            <h2>Behind the Line</h2>
            <ul>
                <% for link in @btl_links -%>
                <li><%= link_to link.title, soapbox_topic_path(link) %></li>
                <% end -%>
                <%= link_to "View more", soapbox_topics_path %>
            </ul>
            <!-- <h2>Travel Guide</h2> -->
        </div>
        <div id="main-feeds">
            <div class="live-feed">
                <h2>A la Minute</h2>
                <%= link_to "+ See all", soapbox_a_la_minute_questions_path, :class => "link-all" %>
                <% @alm_questions.each_with_index do |question, index| -%>
                <div class="a_la_minute_question" id="alm_<%= index %>">
                    <h3><%= link_to question.question, soapbox_a_la_minute_question_path(question) %></h3>
                    <% if question.latest_answer.present? -%>
                    <%= render :partial => 'restaurants/identity', :locals => { :restaurant => question.latest_answer.responder } %>
                    <p class="answer"><%= question.latest_answer.answer %></p>
                    <p class="datestamp">Posted <%= question.latest_answer.created_at.strftime("%D") %></p>
                    <div class="clearfix">&nbsp;</div>
                    <% end -%>
                </div>
                <% end -%>
                <div>
                    <% (1..4).each do |i| %>
                      <%= link_to_function i, "$('.a_la_minute_question').hide(); $('#alm_#{i-1}').show()" if @alm_questions[i-1].present? %>
                    <% end %>
                    <%= link_to "more", soapbox_a_la_minute_questions_path %>
                </div>
            </div>

            <div class="live-feed">
                <h2>Behind the Line</h2>
                <%= link_to "+ See all", soapbox_topics_path, :class => "link-all" %>
                <% @btl_questions.each_with_index do |question, index| -%>
                <div class="profile_question" id="btl_<%= index %>">
                    <h3>Topic: <%= question.topic.title %></h3>
                    <h4><%= link_to question.title, soapbox_question_path(question) %></h4>
                    <% if question.latest_answer.present? -%>
                    <div style="height:100px">
                        <%= render :partial => 'users/identity', :locals => { :user => question.latest_answer.user } %>
                        <p class="answer"><%= question.latest_answer.answer %></p>
                        <p class="datestamp">Posted <%= question.latest_answer.created_at.strftime("%D") %></p>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    <% end -%>
                </div>
                <% end -%>
                <div>
                    <% (1..4).each do |i| %>
                      <%= link_to_function i, "$('.profile_question').hide(); $('#btl_#{i-1}').show()" if @btl_questions[i-1].present? %>
                    <% end %>
                    <%= link_to "more", soapbox_topics_path %>
                </div>
            </div>
            <!-- <div class="live-feed">
                <h2>Newsfeed</h2>
            </div> -->
        </div>
    </div><!-- /inside -->
</section><!-- /content --> 

