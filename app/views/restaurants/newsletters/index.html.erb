<%= title "Newsletters" %>

<%- if @restaurant.premium_account? -%>
  <% semantic_form_for @restaurant, :url => update_settings_restaurant_newsletters_path do |f| %>
    <%= f.input :newsletter_frequency, :as => :select, :collection => ["weekly", "biweekly", "monthly"] %>
    <%= submit_tag "Save" %>
  <% end %>

  <p><%= link_to "Preview newsletter", preview_restaurant_newsletters_path(@restaurant), :popup => true %></p>

  <p><%= button_to "Send newsletter", restaurant_newsletters_path(@restaurant) %></p>

  <% if @restaurant.shareable_newsletter_subscribers.present? %>
    <p><%= link_to "View Newsletter Subscriptions", newsletter_subscriptions_restaurant_path(@restaurant), :class => "promo editor" %></p>
  <% end %>
<%- else -%>
  <p><%= link_to "Upgrade to a premium account", new_subscription_path(@restaurant) %> to access your newsletter!</p>
<%- end -%>