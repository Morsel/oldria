<% title "Transfer RIA Event" %>

<h3><%= @event.title %></h3>

<%= render :partial => "details" %>

<div id="have_replied" class="conversations_list">
  <h3>Participating (<%= @event.child_count %>)</h3>

  <table>
    <%= render @event.children %>
  </table>
</div>

<p class="clearfix"><%= link_to "#{image_tag('plus.png')} Add this event to my calendar", transfer_restaurant_event_path(@restaurant, :id => @event), :method => "post", :class => "button" %></p>

<p><%= link_to "Take me back to my calendars", restaurant_calendars_path(@restaurant), :class => "button" %></p>