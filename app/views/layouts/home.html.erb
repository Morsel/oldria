    <header class="clearfix">
      <%= render :partial => "layouts/nav_sites" %>

      <div id="mainNav" class="clearfix container">
        <nav>
          <ul class="clearfix">
            <div class="left">
              <li class="left"><%= link_to "Learn More", page_path('about') %></li>
              <li class="left"><%= link_to "FAQs", page_path('faq') %></li>
            </div>
            <div class="right">
              <li class="left"><%= link_to "Join", page_path('request-invitation') %></li>
              <li class="left"><%= link_to "Contact", hq_page_path('contact') %></li>
            </div>
          </ul>
        </nav>
      </div>
    </header>

    <div class="mainGraphic">
      <div class="message">
        <div class="container">
          <h2 class="chefsMessage">Showcase your talent in a community of your peers</h2>
          <h2 class="pubMessage">Get more access to more media and help your clients reach more diners<br>- without the busywork</h2>
          <h2 class="journalistMessage">Access the nation's largest database of restaurant press information</h2>
          <h2 class="dinersMessage">Go behind the scenes with the nation's most engaging chefs</h2>
        </div>
      </div>      
    </div>
    
    <section id="main" role="main">
        <article id="infoBoxes" class="gradient">
            <div class="clearfix boxContainer">
                <div class="box chefBox">
                    <h2 class="ir">Chefs</h2>
                    <div class="content">
                        <h3>Get the word out</h3>
                        <p>Share your creativity, inspirations and philosophies with media and diners.</p>
                        <p>Join hundreds of the nation’s top chefs, mixologists and sommeliers online.</p>
                        <p>Reach new diners looking to discover the best new chefs.</p>
                    </div>
                    <ul id="callButtons1">
                        <li class="learn"><%= link_to "learn", page_path('about'), :title => "learn" %></li>
                        <li class="join"><%= link_to "join", page_path('request-invitation'), :title => "join" %></li>
                    </ul>
                </div>

                <div class="box pubBox">
                    <h2 class="ir">Publicists</h2>
                    <div class="content">
                        <h3>Simplify your job</h3>
                        <p>Streamline your job with a media center custom-built for restaurant publicists.</p>
                        <p>Connect your clients with thousands of journalists&mdash;and diners&mdash;everyday.</p>
                        <p>Automatically create content for your clients’ Facebook and Twitter accounts.</p>
                    </div>
                    <ul id="callButtons2">
                        <li class="learn"><%= link_to "learn", page_path('about'), :title => "learn" %></li>
                        <li class="join"><%= link_to "join", page_path('request-invitation'), :title => "join" %></li>
                    </ul>
                </div>

                <div class="box mediaBox">
                    <h2 class="ir">Media</h2>
                    <div class="content">
                        <h3>Find sources + ideas</h3>
                        <p>Revolutionize your research with our direct pipeline to the country’s most engaging restaurants, chefs, mixologists and sommeliers.</p>
                        <p>Get daily reports on trends, news and activities online or via email.</p>
                        <p>Connect with responsive sources securely and privately.</p>
                    </div>
                    <ul id="callButtons3">
                        <li class="learn"><%= link_to "learn", page_path('about'), :title => "learn" %></li>
                        <li class="join"><%= link_to "join", page_path('request-invitation'), :title => "join" %></li>
                    </ul>
                </div>
            </div>
        </article>

        <div id="signup_form">&nbsp;</div>

      <article id="join" class="gradient">
        <div class="articleBox">
          <h2 class="ir">Join Us</h2>
          <% form_tag redirect_invitations_path, :id => "join" do %>
          <div class="left">
              <%= text_field_tag "first_name", "", :id => "firstName", :class => "standard-filler", :alt => "First Name", :required => "" %>
              <%= text_field_tag "last_name", "", :id => "lastName", :class => "standard-filler", :alt => "Last Name", :required => "" %>
          </div>
          <div class="right">
              <%= text_field_tag "email", "", :id => "email", :class => "standard-filler", :alt => "email", :required => "" %>
              <%= select_tag "role", options_for_select([["Select one", ""], ["Diner", "diner"], ["Restaurant professional", "restaurant"], ["Media", "media"]]) %>
          </div>
          <div class="clearfix">
              <p class="left">By entering your information you are agreeing to our <a href="<%= page_path('terms') %>" class="terms">terms and services</a></p>
              <%= submit_tag "Sign Me Up", :id => "submit", :class => "right" %>
          </div>
          <% end %>
        </div>
      </article>

      <article id="testimonials" class="gradient">
        <div class="articleBox">
          <h2 class="ir">What People Are Saying.</h2>
          <div class="testimonial clearfix">
            <img class="left" src="/images/sf/profile1.png" />
            <div>
              <blockquote>
                "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis justo libero."
              </blockquote>
              <p>Firstname Lastname, Company or Restaurant</p>
            </div>
          </div>
          <div class="testimonial clearfix">
            <img class="right" src="/images/sf/profile2.png" />
            <div>
              <blockquote>
                "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis justo libero."
              </blockquote>
              <p>Firstname Lastname, Company or Restaurant</p>
            </div>
          </div>
            <div class="testimonial clearfix">
              <img class="left" src="/images/sf/profile1.png" />
              <div>
                <blockquote>
                  "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis justo libero."
                </blockquote>
                <p>Firstname Lastname, Company or Restaurant</p>
              </div>
            </div>
        </div>
      </article>

      <article id="social" class="gradient">
        <div class="articleBox">
          <h2 class="ir">Social</h2>
          <div class="socialContainer clearfix">
            <div class="twitter clearfix">            
              <h3>Follow <a href="http://www.twitter.com/soapbox_HQ">@soapbox_HQ</a>on Twitter</h3>
              <img src="/images/sf/twitter.png" alt="Twitter" />
              <div class="twitterBox">
                <span class="arrow"></span>
                <div class="tweet"></div>
              </div>
            </div>
            <div class="facebook left">
              <h3>Follow ria on Facebook</h3>
              <div class="fb-activity" data-site="https://www.facebook.com/RestaurantIntelligenceAgency" data-width="325" data-height="390" data-header="true" data-recommendations="false">
              </div>
            </div>
          </div>
        </div>
      </article>

    </section>

    <%= render :partial => "layouts/sf_footer_links" %>

    <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js' %>
    <%= javascript_include_tag 'jquery.tweet.js', 'filler.js', 'jquery.simplemodal.js', 'sf_home.js' %>

