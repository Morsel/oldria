<div id="user_status" class="box clearfix">

  <%- if current_user && !current_user.media?-%>
  <%= link_to image_tag(current_user.avatar.url(:thumb), :class => 'thumbnail'),
  profile_path(current_user.username) %>
  <% end -%>

  <%- if current_user %>
  <p>Logged in as <%= link_to current_user.username, profile_path(current_user.username), :class => 'username' %></p>

  <ul class="actions">
    <li class="edit_profile"><%= link_to "Edit My Account", edit_user_path(current_user) %></li>
    <li class="logout"><%= link_to "Log out", logout_path %></li>
  </ul>


  <%- else -%>

  <p>
    You are currently not logged in. <%= link_to "Login!", login_path %>
    <%# link_to "Sign Up", signup_path %>
  </p>
  <h4>
    <%# link_to "Sign up here!", new_media_user_path %>
  </h4>
  <% end -%>

</div>
