<li class="status">
    <span class="profile_image"><%= image_tag Mogli::User.find(status.from.id).image_url, :width => 48, :height => 48 %></span>
    <span class="message"><%= auto_link(status['message']) %></span><br/>
    <span class="meta">
        Posted by
        <span class="tweeter"><%= status.from['name'] %></span>
        <% user_id, post_id = status['id'].split("_") %>
        <span class="posted"><%= link_to time_ago_in_words(status['updated_time']), "http://www.facebook.com/#{user_id}/posts/#{post_id}" %> ago</span>
    </span>
</li>