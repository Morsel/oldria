<% for discussion in @media_request_discussions %>
<% if discussion.media_request.admin? %>
	<% div_for discussion.media_request, :class => "clearfix admin" do %>
		<p class="reply_link"><%= link_to "reply", discussion %></p>
		<p class="meta">
			<%= discussion.media_request.created_at.strftime("%b %e") %> |
			RIA Staff says:
		</p>
		<p class="message">
			<%= discussion.media_request.message %>
		</p>
	<% end # div -%>
<% else %>
	<% div_for discussion.media_request, :class => "clearfix" do %>
		<p class="reply_link"><%= link_to "reply", discussion %></p>
		<p class="meta">
			<%= discussion.media_request.created_at.strftime("%b %e") %> |
			<%= discussion.media_request.publication_string %> wants to know:
		</p>
		<p class="message">
			<%= truncate h(discussion.media_request.message), :length => 100 %>
		</p>
	<% end # div -%>
<% end -%>
<% end # for loop %>
