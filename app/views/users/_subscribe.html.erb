<% user ||=@user %>
<% unless user.blank? %>

	<% if current_user.user_profile_subscribe(user).blank? %>
     <%= link_to 'Subscribe',user_profile_subscribe_path(user.username) %>
  <% else %> 
     <%= link_to 'Unsubscribe', user_profile_subscribe_path(user.username) %>
  <% end  %>   
     <%= mail_to 'help@restaurantintelligenceagency.com',"Inquire" ,:subject => "Question regarding your Spoonfeed profile" %>
     <%= link_to (image_tag "http://blog.restaurantintelligenceagency.com/images/newsletter/print.jpg"), "javascript:myPrint();" %>
     <%#= link_to (image_tag "http://blog.restaurantintelligenceagency.com/images/newsletter/print.jpg"), profile_path(user.username,:print=>true) %>
     <%= link_to image_tag("http://blog.restaurantintelligenceagency.com/images/newsletter/mail.gif"), "mailto:#{user.email}?Subject=Reporting restaurant" %>
<% end %>

<script>
function myPrint() {
	var printContents = document.getElementById("main").innerHTML;
	var originalContents = document.body.innerHTML;
	document.body.innerHTML = printContents;
	window.print();
	document.body.innerHTML = originalContents;
}

</script>